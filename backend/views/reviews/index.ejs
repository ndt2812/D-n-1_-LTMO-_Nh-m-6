<%- include('../partials/header') %>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <% if (messages && messages.success) { %>
                <div class="alert alert-success"><%= messages.success %></div>
            <% } %>
            <% if (messages && messages.error) { %>
                <div class="alert alert-danger"><%= messages.error %></div>
            <% } %>

            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3>Đánh giá cho: <%= book.title %></h3>
                    <a href="/books/<%= book._id %>" class="btn btn-secondary">Quay lại</a>
                </div>
                <div class="card-body">
                    <!-- Book Info -->
                    <div class="row mb-4">
                        <div class="col-md-2">
                            <img src="<%= book.coverImage %>" alt="<%= book.title %>" class="img-fluid">
                        </div>
                        <div class="col-md-10">
                            <h5><%= book.title %></h5>
                            <p class="text-muted">Tác giả: <%= book.author %></p>
                            <% if (book.averageRating > 0) { %>
                                <div class="mb-2">
                                    <span class="h5">
                                        <% for(let i = 1; i <= 5; i++) { %>
                                            <% if(i <= Math.floor(book.averageRating)) { %>
                                                <span class="text-warning">⭐</span>
                                            <% } else if(i === Math.ceil(book.averageRating) && book.averageRating % 1 !== 0) { %>
                                                <span class="text-warning">⭐</span>
                                            <% } else { %>
                                                <span class="text-muted">☆</span>
                                            <% } %>
                                        <% } %>
                                    </span>
                                    <span class="ms-2">(<%= book.averageRating.toFixed(1) %>/5.0 - <%= totalReviews %> đánh giá)</span>
                                </div>
                            <% } else { %>
                                <p class="text-muted">Chưa có đánh giá</p>
                            <% } %>
                        </div>
                    </div>

                    <!-- Reviews List -->
                    <% if (reviews && reviews.length > 0) { %>
                        <div class="reviews-list">
                            <% reviews.forEach(review => { %>
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div>
                                                <h6 class="card-title">
                                                    <strong><%= review.user.username %></strong>
                                                    <span class="ms-2">
                                                        <% for(let i = 1; i <= 5; i++) { %>
                                                            <% if(i <= review.rating) { %>
                                                                <span class="text-warning">⭐</span>
                                                            <% } else { %>
                                                                <span class="text-muted">☆</span>
                                                            <% } %>
                                                        <% } %>
                                                    </span>
                                                </h6>
                                                <p class="card-text"><%= review.comment %></p>
                                                <small class="text-muted">
                                                    <%= new Date(review.createdAt).toLocaleDateString('vi-VN') %>
                                                    <% if (review.isEdited) { %>
                                                        <span class="badge bg-info ms-1">Đã chỉnh sửa</span>
                                                    <% } %>
                                                </small>
                                            </div>
                                            <% if (currentUser && review.user._id.toString() === currentUser.id && review.canEdit) { %>
                                                <div class="dropdown">
                                                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" 
                                                            data-bs-toggle="dropdown">
                                                        ⋮
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        <li><a class="dropdown-item" href="/reviews/<%= review._id %>/edit">Chỉnh sửa</a></li>
                                                        <li><hr class="dropdown-divider"></li>
                                                        <li>
                                                            <form action="/reviews/<%= review._id %>?_method=DELETE" method="POST" 
                                                                  onsubmit="return confirm('Bạn có chắc chắn muốn xóa đánh giá này?')"
                                                                  class="d-inline">
                                                                <button type="submit" class="dropdown-item text-danger">Xóa</button>
                                                            </form>
                                                        </li>
                                                    </ul>
                                                </div>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>

                        <!-- Pagination -->
                        <% if (totalPages > 1) { %>
                            <nav aria-label="Page navigation">
                                <ul class="pagination justify-content-center">
                                    <% if (currentPage > 1) { %>
                                        <li class="page-item">
                                            <a class="page-link" href="?page=<%= currentPage - 1 %>">Trước</a>
                                        </li>
                                    <% } %>
                                    
                                    <% for (let i = 1; i <= totalPages; i++) { %>
                                        <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                            <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                                        </li>
                                    <% } %>
                                    
                                    <% if (currentPage < totalPages) { %>
                                        <li class="page-item">
                                            <a class="page-link" href="?page=<%= currentPage + 1 %>">Sau</a>
                                        </li>
                                    <% } %>
                                </ul>
                            </nav>
                        <% } %>
                    <% } else { %>
                        <div class="text-center py-5">
                            <h5 class="text-muted">Chưa có đánh giá nào</h5>
                            <p class="text-muted">Hãy là người đầu tiên đánh giá cuốn sách này!</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>