<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        <%- include('../../partials/adminHeader') %>
        .stats-card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.08);
            overflow: hidden;
            position: relative;
            color: #fff;
        }
        .stats-card::before {
            content: '';
            position: absolute;
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.15);
            top: -20px;
            right: -20px;
        }
        .stats-card .card-body {
            position: relative;
            z-index: 2;
        }
        .table thead th {
            background-color: #f8f9fa;
            border-bottom: 2px solid #dee2e6;
        }
        .badge-status {
            font-size: 0.85rem;
            padding: 0.45em 0.75em;
            border-radius: 999px;
        }
        .order-search .form-label {
            font-weight: 600;
            color: #495057;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <%- include('../../partials/adminSidebar') %>

            <!-- Main Content -->
            <div class="col-md-10">
                <div class="d-flex justify-content-between align-items-center py-3 border-bottom">
                    <h1><%= title %></h1>
                    <span class="badge bg-primary">Admin: <%= currentUser.username %></span>
                </div>

                <!-- Flash Messages -->
                <% if (typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
                    <div class="alert alert-success alert-dismissible fade show mt-3">
                        <%= success_msg %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <% if (typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
                    <div class="alert alert-danger alert-dismissible fade show mt-3">
                        <%= error_msg %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <!-- Summary Cards -->
                <div class="row mt-4 g-3">
                    <div class="col-md-3">
                        <div class="card stats-card" style="background: linear-gradient(135deg,#667eea 0%,#764ba2 100%);">
                            <div class="card-body">
                                <h6 class="text-uppercase mb-1">Tổng đơn hàng</h6>
                                <h2 class="fw-bold"><%= totalOrders %></h2>
                                <p class="mb-0"><i class="fas fa-layer-group me-2"></i>Đang theo dõi <%= totalPages %> trang</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card stats-card" style="background: linear-gradient(135deg,#4facfe 0%,#00f2fe 100%);">
                            <div class="card-body">
                                <h6 class="text-uppercase mb-1">Đang xử lý</h6>
                                <h2 class="fw-bold"><%= (statusSummary.processing || 0) + (statusSummary.pending || 0) %></h2>
                                <p class="mb-0"><i class="fas fa-spinner me-2"></i>Pending: <%= statusSummary.pending || 0 %></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card stats-card" style="background: linear-gradient(135deg,#43e97b 0%,#38f9d7 100%);">
                            <div class="card-body">
                                <h6 class="text-uppercase mb-1">Đã hoàn thành</h6>
                                <h2 class="fw-bold"><%= statusSummary.delivered || 0 %></h2>
                                <p class="mb-0"><i class="fas fa-check-circle me-2"></i>Đã giao thành công</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card stats-card" style="background: linear-gradient(135deg,#f093fb 0%,#f5576c 100%);">
                            <div class="card-body">
                                <h6 class="text-uppercase mb-1">Doanh thu (₫)</h6>
                                <h2 class="fw-bold"><%= revenueSummary.totalRevenue.toLocaleString('vi-VN') %></h2>
                                <p class="mb-0"><i class="fas fa-shipping-fast me-2"></i>Phí ship: <%= revenueSummary.totalShipping.toLocaleString('vi-VN') %></p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Filters -->
                <div class="card mt-4">
                    <div class="card-body order-search">
                        <form method="GET" class="row g-3 align-items-center">
                            <div class="col-md-4">
                                <label class="form-label" for="search">Tìm kiếm</label>
                                <input type="text" class="form-control" id="search" name="search"
                                       value="<%= filters.search %>" placeholder="Mã đơn, tên khách hàng, username...">
                            </div>
                            <div class="col-md-3">
                                <label class="form-label" for="orderStatus">Trạng thái đơn</label>
                                <select class="form-select" id="orderStatus" name="orderStatus">
                                    <option value="all" <%= filters.orderStatus === 'all' ? 'selected' : '' %>>Tất cả</option>
                                    <option value="pending" <%= filters.orderStatus === 'pending' ? 'selected' : '' %>>Chờ xử lý</option>
                                    <option value="processing" <%= filters.orderStatus === 'processing' ? 'selected' : '' %>>Đang xử lý</option>
                                    <option value="shipped" <%= filters.orderStatus === 'shipped' ? 'selected' : '' %>>Đang giao</option>
                                    <option value="delivered" <%= filters.orderStatus === 'delivered' ? 'selected' : '' %>>Đã giao</option>
                                    <option value="cancelled" <%= filters.orderStatus === 'cancelled' ? 'selected' : '' %>>Đã hủy</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label" for="paymentStatus">Trạng thái thanh toán</label>
                                <select class="form-select" id="paymentStatus" name="paymentStatus">
                                    <option value="all" <%= filters.paymentStatus === 'all' ? 'selected' : '' %>>Tất cả</option>
                                    <option value="pending" <%= filters.paymentStatus === 'pending' ? 'selected' : '' %>>Chờ thanh toán</option>
                                    <option value="paid" <%= filters.paymentStatus === 'paid' ? 'selected' : '' %>>Đã thanh toán</option>
                                    <option value="failed" <%= filters.paymentStatus === 'failed' ? 'selected' : '' %>>Thanh toán lỗi</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">&nbsp;</label>
                                <div class="d-flex gap-2">
                                    <button type="submit" class="btn btn-primary w-100">
                                        <i class="fas fa-search"></i> Lọc
                                    </button>
                                    <a href="/admin/orders" class="btn btn-outline-secondary">
                                        <i class="fas fa-redo"></i>
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Orders Table -->
                <div class="card mt-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Danh sách đơn hàng</h5>
                        <span class="badge bg-info">Hiển thị <%= orders.length %> / <%= totalOrders %> đơn</span>
                    </div>
                    <div class="card-body p-0">
                        <% if (orders.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-hover mb-0 align-middle">
                                    <thead>
                                        <tr>
                                            <th>Mã đơn</th>
                                            <th>Khách hàng</th>
                                            <th>Trạng thái đơn</th>
                                            <th>Thanh toán</th>
                                            <th>Tổng tiền</th>
                                            <th>Ngày tạo</th>
                                            <th>Thao tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% orders.forEach(order => { %>
                                            <tr>
                                                <td>
                                                    <strong><%= order.orderNumber %></strong><br>
                                                    <small class="text-muted">#<%= order._id %></small>
                                                </td>
                                                <td>
                                                    <% if (order.user) { %>
                                                        <div><strong><%= order.user.username %></strong></div>
                                                        <small class="text-muted"><%= order.user.profile?.fullName || order.shippingAddress.fullName %></small>
                                                    <% } else { %>
                                                        <div><strong><%= order.shippingAddress.fullName %></strong></div>
                                                        <small class="text-muted">Tài khoản khách</small>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <% if (order.orderStatus === 'pending') { %>
                                                        <span class="badge-status badge bg-warning text-dark">Chờ xử lý</span>
                                                    <% } else if (order.orderStatus === 'processing') { %>
                                                        <span class="badge-status badge bg-primary">Đang xử lý</span>
                                                    <% } else if (order.orderStatus === 'shipped') { %>
                                                        <span class="badge-status badge bg-info text-dark">Đang giao</span>
                                                    <% } else if (order.orderStatus === 'delivered') { %>
                                                        <span class="badge-status badge bg-success">Đã giao</span>
                                                    <% } else { %>
                                                        <span class="badge-status badge bg-secondary">Đã hủy</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <% if (order.paymentStatus === 'paid') { %>
                                                        <span class="badge-status badge bg-success">Đã thanh toán</span>
                                                    <% } else if (order.paymentStatus === 'failed') { %>
                                                        <span class="badge-status badge bg-danger">Thanh toán lỗi</span>
                                                    <% } else { %>
                                                        <span class="badge-status badge bg-warning text-dark">Chờ thanh toán</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <div class="fw-bold text-success">
                                                        <%= order.finalAmount.toLocaleString('vi-VN') %>₫
                                                    </div>
                                                    <small class="text-muted">
                                                        Hàng: <%= order.totalAmount.toLocaleString('vi-VN') %>₫
                                                    </small>
                                                </td>
                                                <td>
                                                    <small><%= new Date(order.createdAt).toLocaleString('vi-VN') %></small>
                                                </td>
                                                <td>
                                                    <a href="/admin/orders/<%= order._id %>" class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-eye"></i> Chi tiết
                                                    </a>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <div class="text-center py-5">
                                <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">Không có đơn hàng nào phù hợp</h5>
                                <p class="text-muted mb-0">Thử thay đổi bộ lọc hoặc kiểm tra lại sau.</p>
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Pagination -->
                <% if (totalPages > 1) { %>
                    <div class="d-flex justify-content-center my-4">
                        <nav>
                            <ul class="pagination">
                                <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                                    <a class="page-link" href="?page=<%= currentPage - 1 %>&search=<%= filters.search %>&orderStatus=<%= filters.orderStatus %>&paymentStatus=<%= filters.paymentStatus %>">
                                        <i class="fas fa-chevron-left"></i>
                                    </a>
                                </li>
                                <% for (let i = Math.max(1, currentPage - 2); i <= Math.min(totalPages, currentPage + 2); i++) { %>
                                    <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                        <a class="page-link" href="?page=<%= i %>&search=<%= filters.search %>&orderStatus=<%= filters.orderStatus %>&paymentStatus=<%= filters.paymentStatus %>">
                                            <%= i %>
                                        </a>
                                    </li>
                                <% } %>
                                <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                    <a class="page-link" href="?page=<%= currentPage + 1 %>&search=<%= filters.search %>&orderStatus=<%= filters.orderStatus %>&paymentStatus=<%= filters.paymentStatus %>">
                                        <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

