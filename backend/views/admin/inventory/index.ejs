<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .admin-sidebar {
            background-color: #343a40;
            min-height: 100vh;
        }
        .admin-sidebar .nav-link {
            color: #adb5bd;
        }
        .admin-sidebar .nav-link:hover {
            color: #fff;
        }
        .admin-sidebar .nav-link.active {
            color: #fff;
            background-color: #495057;
        }
        .stock-low { color: #ffc107; }
        .stock-out { color: #dc3545; }
        .stock-good { color: #198754; }
        .stats-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }
        .stats-card.inventory {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        }
        .stats-card.low-stock {
            background: linear-gradient(135deg, #ffeaa7 0%, #fab1a0 100%);
        }
        .stats-card.out-stock {
            background: linear-gradient(135deg, #ff7675 0%, #fd79a8 100%);
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 admin-sidebar p-3">
                <h4 class="text-white mb-4">
                    <i class="fas fa-cog"></i> Admin Panel
                </h4>
                <nav class="nav flex-column">
                    <a class="nav-link" href="/admin">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>
                    <a class="nav-link" href="/admin/books">
                        <i class="fas fa-book"></i> Quản lý sách
                    </a>
                    <a class="nav-link active" href="/admin/inventory">
                        <i class="fas fa-warehouse"></i> Quản lý kho hàng
                    </a>
                    <a class="nav-link" href="/admin/digital-content">
                        <i class="fas fa-tablet-alt"></i> Nội dung số
                    </a>
                    <a class="nav-link" href="/admin/promotions">
                        <i class="fas fa-tags"></i> Mã khuyến mãi
                    </a>
                    <a class="nav-link" href="/admin/coin-transactions">
                        <i class="fas fa-coins"></i> Giao dịch Coin
                    </a>
                    <a class="nav-link" href="/admin/users">
                        <i class="fas fa-users"></i> Quản lý người dùng
                    </a>
                    <a class="nav-link" href="/admin/categories">
                        <i class="fas fa-list-alt"></i> Quản lý danh mục
                    </a>
                    <a class="nav-link" href="/admin/orders">
                        <i class="fas fa-shopping-cart"></i> Đơn hàng
                    </a>
                    <a class="nav-link" href="/admin/reports">
                        <i class="fas fa-chart-line"></i> Báo cáo & Thống kê
                    </a>
                    <hr class="text-secondary">
                    <a class="nav-link" href="/books">
                        <i class="fas fa-home"></i> Về trang chủ
                    </a>
                    <a class="nav-link" href="/logout">
                        <i class="fas fa-sign-out-alt"></i> Đăng xuất
                    </a>
                </nav>
            </div>

            <!-- Main Content -->
            <div class="col-md-10">
                <div class="d-flex justify-content-between align-items-center py-3 border-bottom">
                    <h1><%= title %></h1>
                    <span class="badge bg-primary">Admin: <%= currentUser.username %></span>
                </div>

                <!-- Flash Messages -->
                <% if (typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
                    <div class="alert alert-success alert-dismissible fade show mt-3">
                        <%= success_msg %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <% if (typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
                    <div class="alert alert-danger alert-dismissible fade show mt-3">
                        <%= error_msg %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <!-- Statistics Cards -->
                <div class="row mt-4">
                    <div class="col-md-3">
                        <div class="card stats-card inventory mb-3">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="flex-grow-1">
                                        <h5 class="card-title">Tổng sản phẩm</h5>
                                        <h2 class="mb-0"><%= stats.totalBooks %></h2>
                                    </div>
                                    <div>
                                        <i class="fas fa-boxes fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card stats-card mb-3">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="flex-grow-1">
                                        <h5 class="card-title">Tổng tồn kho</h5>
                                        <h2 class="mb-0"><%= stats.totalStock %></h2>
                                    </div>
                                    <div>
                                        <i class="fas fa-warehouse fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card stats-card low-stock mb-3">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="flex-grow-1">
                                        <h5 class="card-title">Sắp hết hàng</h5>
                                        <h2 class="mb-0"><%= stats.lowStock %></h2>
                                        <small>≤ 5 cuốn</small>
                                    </div>
                                    <div>
                                        <i class="fas fa-exclamation-triangle fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card stats-card out-stock mb-3">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="flex-grow-1">
                                        <h5 class="card-title">Hết hàng</h5>
                                        <h2 class="mb-0"><%= stats.outOfStock %></h2>
                                        <small>0 cuốn</small>
                                    </div>
                                    <div>
                                        <i class="fas fa-times-circle fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Filters -->
                <div class="card mt-4">
                    <div class="card-body">
                        <form method="GET" class="row g-3">
                            <div class="col-md-3">
                                <label for="search" class="form-label">Tìm kiếm</label>
                                <input type="text" class="form-control" id="search" name="search" 
                                       value="<%= filters.search %>" placeholder="Tên sách, tác giả, ISBN...">
                            </div>
                            <div class="col-md-2">
                                <label for="category" class="form-label">Danh mục</label>
                                <select class="form-select" id="category" name="category">
                                    <option value="">Tất cả</option>
                                    <% categories.forEach(cat => { %>
                                        <option value="<%= cat._id %>" <%= filters.category === cat._id.toString() ? 'selected' : '' %>>
                                            <%= cat.name %>
                                        </option>
                                    <% }) %>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label for="stock" class="form-label">Tình trạng kho</label>
                                <select class="form-select" id="stock" name="stock">
                                    <option value="">Tất cả</option>
                                    <option value="available" <%= filters.stock === 'available' ? 'selected' : '' %>>Còn hàng</option>
                                    <option value="low" <%= filters.stock === 'low' ? 'selected' : '' %>>Sắp hết</option>
                                    <option value="out" <%= filters.stock === 'out' ? 'selected' : '' %>>Hết hàng</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">&nbsp;</label>
                                <div class="d-flex gap-2">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-search"></i> Lọc
                                    </button>
                                    <a href="/admin/inventory" class="btn btn-secondary">
                                        <i class="fas fa-times"></i> Xóa bộ lọc
                                    </a>
                                    <a href="/admin/inventory/export" class="btn btn-success">
                                        <i class="fas fa-download"></i> Xuất Excel
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="card mt-4">
                    <div class="card-header">
                        <h5 class="mb-0">Cập nhật nhanh</h5>
                    </div>
                    <div class="card-body">
                        <form id="bulkUpdateForm">
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Sách</th>
                                            <th width="150">Tồn kho hiện tại</th>
                                            <th width="150">Tồn kho mới</th>
                                        </tr>
                                    </thead>
                                    <tbody id="quickUpdateBody">
                                        <!-- Will be populated by JavaScript -->
                                    </tbody>
                                </table>
                            </div>
                            <button type="button" class="btn btn-warning" onclick="addQuickUpdate()">
                                <i class="fas fa-plus"></i> Thêm sách
                            </button>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Cập nhật tất cả
                            </button>
                        </form>
                    </div>
                </div>

                <!-- Inventory Table -->
                <div class="card mt-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Danh sách kho hàng</h5>
                        <span class="badge bg-info">
                            Hiển thị <%= books.length %> trên tổng <%= pagination.total * 10 %> sản phẩm
                        </span>
                    </div>
                    <div class="card-body">
                        <% if (books.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Sách</th>
                                            <th>Danh mục</th>
                                            <th>Giá bán</th>
                                            <th width="120">Tồn kho</th>
                                            <th width="200">Cập nhật kho</th>
                                            <th width="100">Thao tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% books.forEach(book => { %>
                                            <tr>
                                                <td>
                                                    <div class="d-flex">
                                                        <img src="<%= book.coverImage %>" alt="<%= book.title %>" 
                                                             style="width: 50px; height: 70px; object-fit: cover;" class="me-2">
                                                        <div>
                                                            <strong><%= book.title %></strong><br>
                                                            <small class="text-muted">
                                                                <%= book.author %>
                                                            </small>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <span class="badge bg-secondary">
                                                        <%= book.category?.name || 'Chưa phân loại' %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <strong><%= book.price.toLocaleString('vi-VN') %>₫</strong>
                                                </td>
                                                <td>
                                                    <span class="badge fs-6 <%= book.stock === 0 ? 'bg-danger' : book.stock <= 5 ? 'bg-warning text-dark' : 'bg-success' %>">
                                                        <%= book.stock %> cuốn
                                                    </span>
                                                </td>
                                                <td>
                                                    <form method="POST" action="/admin/inventory/<%= book._id %>/update" 
                                                          class="d-flex gap-1" style="font-size: 12px;">
                                                        <select name="action" class="form-select form-select-sm" style="width: 80px;">
                                                            <option value="set">Đặt</option>
                                                            <option value="add">+</option>
                                                            <option value="subtract">-</option>
                                                        </select>
                                                        <input type="number" name="stock" class="form-control form-control-sm" 
                                                               min="0" max="9999" required style="width: 70px;">
                                                        <button type="submit" class="btn btn-sm btn-primary">
                                                            <i class="fas fa-check"></i>
                                                        </button>
                                                    </form>
                                                </td>
                                                <td>
                                                    <button type="button" class="btn btn-sm btn-info" 
                                                            onclick="showBookDetails('<%= book._id %>')">
                                                        <i class="fas fa-info-circle"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>

                            <!-- Pagination -->
                            <% if (pagination.total > 1) { %>
                                <nav>
                                    <ul class="pagination justify-content-center">
                                        <% if (pagination.hasPrev) { %>
                                            <li class="page-item">
                                                <a class="page-link" href="?page=<%= pagination.prev %>&search=<%= filters.search %>&category=<%= filters.category %>&stock=<%= filters.stock %>">
                                                    Trước
                                                </a>
                                            </li>
                                        <% } %>

                                        <% for (let i = Math.max(1, pagination.current - 2); i <= Math.min(pagination.total, pagination.current + 2); i++) { %>
                                            <li class="page-item <%= i === pagination.current ? 'active' : '' %>">
                                                <a class="page-link" href="?page=<%= i %>&search=<%= filters.search %>&category=<%= filters.category %>&stock=<%= filters.stock %>">
                                                    <%= i %>
                                                </a>
                                            </li>
                                        <% } %>

                                        <% if (pagination.hasNext) { %>
                                            <li class="page-item">
                                                <a class="page-link" href="?page=<%= pagination.next %>&search=<%= filters.search %>&category=<%= filters.category %>&stock=<%= filters.stock %>">
                                                    Sau
                                                </a>
                                            </li>
                                        <% } %>
                                    </ul>
                                </nav>
                            <% } %>
                        <% } else { %>
                            <div class="text-center py-5">
                                <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">Không có sản phẩm nào</h5>
                                <p class="text-muted">Thử thay đổi bộ lọc để xem thêm sản phẩm</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Book Details Modal -->
    <div class="modal fade" id="bookDetailsModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Thông tin sách</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="bookDetailsContent">
                    <!-- Book details will be loaded here -->
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Quick book selection for bulk update
        let quickBooks = [];

        async function addQuickUpdate() {
            const search = prompt('Nhập tên sách để tìm kiếm:');
            if (!search) return;

            try {
                // You would implement a book search API endpoint
                // For now, we'll use a simple book selector
                const bookId = prompt('Nhập ID sách (tạm thời):');
                if (bookId && !quickBooks.includes(bookId)) {
                    const response = await fetch(`/admin/api/books/${bookId}`);
                    if (response.ok) {
                        const book = await response.json();
                        quickBooks.push(bookId);
                        
                        const row = `
                            <tr>
                                <td>
                                    ${book.title}<br>
                                    <small class="text-muted">${book.author}</small>
                                    <input type="hidden" name="updates[][id]" value="${book.id}">
                                </td>
                                <td>
                                    <span class="badge bg-info">${book.stock}</span>
                                </td>
                                <td>
                                    <input type="number" name="updates[][stock]" class="form-control form-control-sm" min="0" required>
                                    <button type="button" class="btn btn-sm btn-outline-danger mt-1" onclick="removeQuickUpdate(this)">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        `;
                        document.getElementById('quickUpdateBody').insertAdjacentHTML('beforeend', row);
                    }
                }
            } catch (error) {
                alert('Có lỗi xảy ra khi tìm kiếm sách');
            }
        }

        function removeQuickUpdate(btn) {
            const row = btn.closest('tr');
            const bookId = row.querySelector('input[name*="id"]').value;
            quickBooks = quickBooks.filter(id => id !== bookId);
            row.remove();
        }

        // Bulk update form submission
        document.getElementById('bulkUpdateForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const updates = [];
            
            const ids = formData.getAll('updates[][id]');
            const stocks = formData.getAll('updates[][stock]');
            
            for (let i = 0; i < ids.length; i++) {
                updates.push({
                    id: ids[i],
                    stock: stocks[i]
                });
            }

            try {
                const response = await fetch('/admin/inventory/bulk-update', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ updates })
                });

                if (response.ok) {
                    location.reload();
                } else {
                    alert('Có lỗi xảy ra khi cập nhật');
                }
            } catch (error) {
                alert('Có lỗi xảy ra khi cập nhật');
            }
        });

        // Show book details
        async function showBookDetails(bookId) {
            try {
                const response = await fetch(`/admin/api/books/${bookId}`);
                if (response.ok) {
                    const book = await response.json();
                    document.getElementById('bookDetailsContent').innerHTML = `
                        <div class="row">
                            <div class="col-12">
                                <h6>Tên sách:</h6>
                                <p>${book.title}</p>
                                
                                <h6>Tác giả:</h6>
                                <p>${book.author}</p>
                                
                                <h6>Danh mục:</h6>
                                <p>${book.category}</p>
                                
                                <h6>Tồn kho hiện tại:</h6>
                                <p class="fs-4">${book.stock} cuốn</p>
                                
                                <h6>Giá bán:</h6>
                                <p>${book.price.toLocaleString('vi-VN')}₫</p>
                            </div>
                        </div>
                    `;
                    
                    const modal = new bootstrap.Modal(document.getElementById('bookDetailsModal'));
                    modal.show();
                } else {
                    alert('Không thể tải thông tin sách');
                }
            } catch (error) {
                alert('Có lỗi xảy ra khi tải thông tin sách');
            }
        }
    </script>
</body>
</html>