<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        <%- include('../../partials/adminHeader') %>
        .stats-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }
        .stats-card.revenue {
            background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        }
        .stats-card.deposits {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        }
        .stats-card.purchases {
            background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
        }
        .stats-card.pending {
            background: linear-gradient(135deg, #ffeaa7 0%, #fab1a0 100%);
        }
        .transaction-type {
            display: inline-block;
            padding: 2px 8px;
            border-radius: 12px;
            font-size: 11px;
            font-weight: bold;
        }
        .type-deposit { background: #e3f2fd; color: #1565c0; }
        .type-purchase { background: #fff3e0; color: #ef6c00; }
        .type-refund { background: #e8f5e8; color: #2e7d32; }
        .type-bonus { background: #f3e5f5; color: #7b1fa2; }
        
        .status-completed { color: #28a745; }
        .status-pending { color: #ffc107; }
        .status-failed { color: #dc3545; }
        .status-cancelled { color: #6c757d; }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <%- include('../../partials/adminSidebar') %>

            <!-- Main Content -->
            <div class="col-md-10">
                <div class="d-flex justify-content-between align-items-center py-3 border-bottom">
                    <h1><%= title %></h1>
                    <div>
                        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#createTransactionModal">
                            <i class="fas fa-plus"></i> Tặng xu
                        </button>
                        <span class="badge bg-primary ms-2">Quản trị viên: <%= currentUser.username %></span>
                    </div>
                </div>

                <!-- Flash Messages -->
                <% if (typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
                    <div class="alert alert-success alert-dismissible fade show mt-3">
                        <%= success_msg %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <% if (typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
                    <div class="alert alert-danger alert-dismissible fade show mt-3">
                        <%= error_msg %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <!-- Statistics Cards -->
                <div class="row mt-4 g-3">
                    <div class="col-md-3">
                        <div class="card stats-card" style="background: linear-gradient(135deg,#11998e 0%,#38ef7d 100%);">
                            <div class="card-body">
                                <h6 class="text-uppercase mb-1">Doanh thu</h6>
                                <h2 class="fw-bold"><%= stats.totalRevenue.toLocaleString('vi-VN') %>₫</h2>
                                <p class="mb-0"><i class="fas fa-money-bill-wave me-2"></i>Tổng doanh thu</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card stats-card" style="background: linear-gradient(135deg,#4facfe 0%,#00f2fe 100%);">
                            <div class="card-body">
                                <h6 class="text-uppercase mb-1">Nạp xu</h6>
                                <h2 class="fw-bold"><%= stats.totalDeposits.toLocaleString('vi-VN') %></h2>
                                <p class="mb-0"><i class="fas fa-arrow-down me-2"></i>Xu đã nạp</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card stats-card" style="background: linear-gradient(135deg,#fa709a 0%,#fee140 100%);">
                            <div class="card-body">
                                <h6 class="text-uppercase mb-1">Chi tiêu</h6>
                                <h2 class="fw-bold"><%= stats.totalPurchases.toLocaleString('vi-VN') %></h2>
                                <p class="mb-0"><i class="fas fa-shopping-cart me-2"></i>Xu đã chi</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card stats-card" style="background: linear-gradient(135deg,#ffeaa7 0%,#fab1a0 100%);">
                            <div class="card-body">
                                <h6 class="text-uppercase mb-1">Chờ xử lý</h6>
                                <h2 class="fw-bold"><%= stats.pendingCount %></h2>
                                <p class="mb-0"><i class="fas fa-clock me-2"></i>Giao dịch chờ</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Daily Stats Chart -->
                <% if (dailyStats.length > 0) { %>
                    <div class="card mt-4">
                        <div class="card-header">
                            <h6 class="mb-0">Thống kê 7 ngày gần nhất</h6>
                        </div>
                        <div class="card-body">
                            <canvas id="dailyChart" height="100" data-chart-data="<%- encodeURIComponent(JSON.stringify(dailyStats)) %>"></canvas>
                        </div>
                    </div>
                <% } %>

                <!-- Filters -->
                <div class="card mt-4">
                    <div class="card-body">
                        <form method="GET" class="row g-3">
                            <div class="col-md-3">
                                <label for="search" class="form-label">Tìm kiếm</label>
                                <input type="text" class="form-control" id="search" name="search" 
                                       value="<%= filters.search %>" placeholder="Tên đăng nhập, thư điện tử, mô tả...">
                            </div>
                            <div class="col-md-2">
                                <label for="type" class="form-label">Loại</label>
                                <select class="form-select" id="type" name="type">
                                    <option value="">Tất cả</option>
                                    <option value="deposit" <%= filters.type === 'deposit' ? 'selected' : '' %>>Nạp tiền</option>
                                    <option value="purchase" <%= filters.type === 'purchase' ? 'selected' : '' %>>Mua sách</option>
                                    <option value="refund" <%= filters.type === 'refund' ? 'selected' : '' %>>Hoàn tiền</option>
                                    <option value="bonus" <%= filters.type === 'bonus' ? 'selected' : '' %>>Tặng thưởng</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label for="status" class="form-label">Trạng thái</label>
                                <select class="form-select" id="status" name="status">
                                    <option value="">Tất cả</option>
                                    <option value="pending" <%= filters.status === 'pending' ? 'selected' : '' %>>Chờ xử lý</option>
                                    <option value="completed" <%= filters.status === 'completed' ? 'selected' : '' %>>Hoàn thành</option>
                                    <option value="failed" <%= filters.status === 'failed' ? 'selected' : '' %>>Thất bại</option>
                                    <option value="cancelled" <%= filters.status === 'cancelled' ? 'selected' : '' %>>Đã hủy</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label for="dateFrom" class="form-label">Từ ngày</label>
                                <input type="date" class="form-control" id="dateFrom" name="dateFrom" 
                                       value="<%= filters.dateFrom %>">
                            </div>
                            <div class="col-md-2">
                                <label for="dateTo" class="form-label">Đến ngày</label>
                                <input type="date" class="form-control" id="dateTo" name="dateTo" 
                                       value="<%= filters.dateTo %>">
                            </div>
                            <div class="col-md-1">
                                <label class="form-label">&nbsp;</label>
                                <button type="submit" class="btn btn-primary d-block w-100">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </form>
                        <div class="mt-2">
                            <a href="/admin/coin-transactions" class="btn btn-secondary btn-sm">
                                <i class="fas fa-times"></i> Xóa bộ lọc
                            </a>
                            <a href="/admin/coin-transactions/export?type=<%= filters.type %>&status=<%= filters.status %>&dateFrom=<%= filters.dateFrom %>&dateTo=<%= filters.dateTo %>" 
                               class="btn btn-success btn-sm">
                                <i class="fas fa-download"></i> Xuất bảng tính
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Transactions Table -->
                <div class="card mt-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Danh sách giao dịch</h5>
                        <span class="badge bg-info">
                            Trang <%= pagination.current %> / <%= pagination.total %>
                        </span>
                    </div>
                    <div class="card-body">
                        <% if (transactions.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Người dùng</th>
                                            <th>Loại</th>
                                            <th>Số xu</th>
                                            <th>Số tiền (VNĐ)</th>
                                            <th>Trạng thái</th>
                                            <th>Thời gian</th>
                                            <th>Thao tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% transactions.forEach(transaction => { %>
                                            <tr>
                                                <td>
                                                    <div>
                                                        <strong><%= transaction.user?.username || 'Không có' %></strong><br>
                                                        <small class="text-muted">
                                                            <%= transaction.user?.email || 'Không có' %>
                                                        </small>
                                                    </div>
                                                </td>
                                                <td>
                                                    <span class="transaction-type type-<%= transaction.type %>">
                                                        <% if (transaction.type === 'deposit') { %>
                                                            <i class="fas fa-arrow-down"></i> Nạp tiền
                                                        <% } else if (transaction.type === 'purchase') { %>
                                                            <i class="fas fa-shopping-cart"></i> Mua sách
                                                        <% } else if (transaction.type === 'refund') { %>
                                                            <i class="fas fa-undo"></i> Hoàn tiền
                                                        <% } else if (transaction.type === 'bonus') { %>
                                                            <i class="fas fa-gift"></i> Tặng thưởng
                                                        <% } %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <% if (transaction.type === 'deposit' || transaction.type === 'refund' || transaction.type === 'bonus') { %>
                                                        <span class="text-success">+<%= transaction.amount.toLocaleString('vi-VN') %></span>
                                                    <% } else { %>
                                                        <span class="text-danger">-<%= transaction.amount.toLocaleString('vi-VN') %></span>
                                                    <% } %>
                                                    <small class="text-muted d-block">
                                                        Số dư: <%= transaction.balanceAfter.toLocaleString('vi-VN') %> xu
                                                    </small>
                                                </td>
                                                <td>
                                                    <% if (transaction.realMoneyAmount > 0) { %>
                                                        <%= transaction.realMoneyAmount.toLocaleString('vi-VN') %> đ
                                                    <% } else { %>
                                                        <span class="text-muted">-</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <span class="status-<%= transaction.status %>">
                                                        <% if (transaction.status === 'completed') { %>
                                                            <i class="fas fa-check-circle"></i> Hoàn thành
                                                        <% } else if (transaction.status === 'pending') { %>
                                                            <i class="fas fa-clock"></i> Chờ xử lý
                                                        <% } else if (transaction.status === 'failed') { %>
                                                            <i class="fas fa-times-circle"></i> Thất bại
                                                        <% } else if (transaction.status === 'cancelled') { %>
                                                            <i class="fas fa-ban"></i> Đã hủy
                                                        <% } %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <small>
                                                        <%= new Date(transaction.createdAt).toLocaleString('vi-VN') %>
                                                    </small>
                                                </td>
                                                <td>
                                                    <a href="/admin/coin-transactions/<%= transaction._id %>/detail" 
                                                       class="btn btn-outline-primary btn-sm" title="Chi tiết">
                                                        <i class="fas fa-info-circle"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>

                            <!-- Pagination -->
                            <% if (pagination.total > 1) { %>
                                <nav class="mt-4">
                                    <ul class="pagination justify-content-center">
                                        <% if (pagination.hasPrev) { %>
                                            <li class="page-item">
                                                <a class="page-link" href="?page=<%= pagination.prev %>&search=<%= filters.search %>&type=<%= filters.type %>&status=<%= filters.status %>&dateFrom=<%= filters.dateFrom %>&dateTo=<%= filters.dateTo %>">
                                                    Trước
                                                </a>
                                            </li>
                                        <% } %>

                                        <% for (let i = Math.max(1, pagination.current - 2); i <= Math.min(pagination.total, pagination.current + 2); i++) { %>
                                            <li class="page-item <%= i === pagination.current ? 'active' : '' %>">
                                                <a class="page-link" href="?page=<%= i %>&search=<%= filters.search %>&type=<%= filters.type %>&status=<%= filters.status %>&dateFrom=<%= filters.dateFrom %>&dateTo=<%= filters.dateTo %>">
                                                    <%= i %>
                                                </a>
                                            </li>
                                        <% } %>

                                        <% if (pagination.hasNext) { %>
                                            <li class="page-item">
                                                <a class="page-link" href="?page=<%= pagination.next %>&search=<%= filters.search %>&type=<%= filters.type %>&status=<%= filters.status %>&dateFrom=<%= filters.dateFrom %>&dateTo=<%= filters.dateTo %>">
                                                    Sau
                                                </a>
                                            </li>
                                        <% } %>
                                    </ul>
                                </nav>
                            <% } %>
                        <% } else { %>
                            <div class="text-center py-5">
                                <i class="fas fa-coins fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">Không có giao dịch nào</h5>
                                <p class="text-muted">Thử thay đổi bộ lọc để xem thêm giao dịch</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Create Manual Transaction Modal -->
    <div class="modal fade" id="createTransactionModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Tặng xu cho người dùng</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form method="POST" action="/admin/coin-transactions/create">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="userId" class="form-label">Người dùng</label>
                            <input type="text" class="form-control" id="userSearch" placeholder="Tìm theo tên đăng nhập hoặc thư điện tử...">
                            <input type="hidden" id="userId" name="userId" required>
                            <div id="userSearchResults" class="mt-2"></div>
                        </div>
                        <div class="mb-3">
                            <label for="amount" class="form-label">Số lượng xu</label>
                            <input type="number" class="form-control" id="amount" name="amount" required min="1" max="10000">
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Mô tả</label>
                            <input type="text" class="form-control" id="description" name="description" 
                                   required placeholder="Lý do tặng xu...">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-success">Tặng xu</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <!-- Load coin transactions specific JavaScript -->
    <script src="/javascripts/coin-transactions.js"></script>
</body>
</html>