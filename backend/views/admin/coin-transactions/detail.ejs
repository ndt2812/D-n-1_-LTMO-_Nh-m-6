<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        <%- include('../../partials/adminHeader') %>
        .transaction-detail-card {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        }
        .status-badge {
            padding: 8px 16px;
            border-radius: 20px;
            font-weight: bold;
        }
        .status-completed { background: #d4edda; color: #155724; }
        .status-pending { background: #fff3cd; color: #856404; }
        .status-failed { background: #f8d7da; color: #721c24; }
        .status-cancelled { background: #e2e3e5; color: #383d41; }

        .timeline {
            position: relative;
            padding-left: 30px;
        }
        .timeline::before {
            content: '';
            position: absolute;
            left: 10px;
            top: 0;
            bottom: 0;
            width: 2px;
            background: #dee2e6;
        }
        .timeline-item {
            position: relative;
            margin-bottom: 20px;
        }
        .timeline-item::before {
            content: '';
            position: absolute;
            left: -25px;
            top: 6px;
            width: 10px;
            height: 10px;
            border-radius: 50%;
            background: #6c757d;
        }
        .timeline-item.current::before {
            background: #007bff;
        }
        .timeline-item.completed::before {
            background: #28a745;
        }
        .timeline-item.failed::before {
            background: #dc3545;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <%- include('../../partials/adminSidebar') %>

            <!-- Main Content -->
            <div class="col-md-10">
                <div class="d-flex justify-content-between align-items-center py-3 border-bottom">
                    <div>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb mb-0">
                                <li class="breadcrumb-item">
                                    <a href="/admin/coin-transactions">Giao dịch xu</a>
                                </li>
                                <li class="breadcrumb-item active">Chi tiết giao dịch</li>
                            </ol>
                        </nav>
                    </div>
                    <div>
                        <a href="/admin/coin-transactions" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                        <span class="badge bg-primary ms-2">Quản trị viên: <%= currentUser.username %></span>
                    </div>
                </div>

                <!-- Flash Messages -->
                <% if (typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
                    <div class="alert alert-success alert-dismissible fade show mt-3">
                        <%= success_msg %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <% if (typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
                    <div class="alert alert-danger alert-dismissible fade show mt-3">
                        <%= error_msg %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <!-- Transaction Detail Card -->
                <div class="card transaction-detail-card mt-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-8">
                                <h3 class="mb-1">
                                    Giao dịch #<%= transaction._id %>
                                </h3>
                                <p class="text-muted mb-3">
                                    Tạo lúc: <%= new Date(transaction.createdAt).toLocaleString('vi-VN') %>
                                </p>
                            </div>
                            <div class="col-md-4 text-end">
                                <div class="status-badge status-<%= transaction.status %> mb-2">
                                    <% if (transaction.status === 'completed') { %>
                                        <i class="fas fa-check-circle"></i> Hoàn thành
                                    <% } else if (transaction.status === 'pending') { %>
                                        <i class="fas fa-clock"></i> Chờ xử lý
                                    <% } else if (transaction.status === 'failed') { %>
                                        <i class="fas fa-times-circle"></i> Thất bại
                                    <% } else if (transaction.status === 'cancelled') { %>
                                        <i class="fas fa-ban"></i> Đã hủy
                                    <% } %>
                                </div>
                                <% if (transaction.status === 'pending') { %>
                                    <div class="btn-group d-block" role="group">
                                        <button type="button" class="btn btn-success btn-sm" onclick="updateStatus('completed')">
                                            <i class="fas fa-check"></i> Duyệt
                                        </button>
                                        <button type="button" class="btn btn-danger btn-sm" onclick="updateStatus('failed')">
                                            <i class="fas fa-times"></i> Từ chối
                                        </button>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <!-- Transaction Details -->
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">Chi tiết giao dịch</h5>
                            </div>
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <strong>Loại giao dịch:</strong>
                                        <div class="mt-1">
                                            <% if (transaction.type === 'deposit') { %>
                                                <span class="badge bg-info">
                                                    <i class="fas fa-arrow-down"></i> Nạp tiền
                                                </span>
                                            <% } else if (transaction.type === 'purchase') { %>
                                                <span class="badge bg-warning">
                                                    <i class="fas fa-shopping-cart"></i> Mua sách
                                                </span>
                                            <% } else if (transaction.type === 'refund') { %>
                                                <span class="badge bg-success">
                                                    <i class="fas fa-undo"></i> Hoàn tiền
                                                </span>
                                            <% } else if (transaction.type === 'bonus') { %>
                                                <span class="badge bg-primary">
                                                    <i class="fas fa-gift"></i> Tặng thưởng
                                                </span>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <strong>Phương thức thanh toán:</strong>
                                        <div class="mt-1">
                                            <% if (transaction.paymentMethod) { %>
                                                <%= transaction.paymentMethod %>
                                            <% } else { %>
                                                <span class="text-muted">Không có</span>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <strong>Số lượng xu:</strong>
                                        <div class="mt-1">
                                            <% if (transaction.type === 'deposit' || transaction.type === 'refund' || transaction.type === 'bonus') { %>
                                                <span class="text-success fs-4">
                                                    +<%= transaction.amount.toLocaleString('vi-VN') %> xu
                                                </span>
                                            <% } else { %>
                                                <span class="text-danger fs-4">
                                                    -<%= transaction.amount.toLocaleString('vi-VN') %> xu
                                                </span>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <strong>Số tiền (VNĐ):</strong>
                                        <div class="mt-1">
                                            <% if (transaction.realMoneyAmount > 0) { %>
                                                <span class="fs-4 text-primary">
                                                    <%= transaction.realMoneyAmount.toLocaleString('vi-VN') %>₫
                                                </span>
                                            <% } else { %>
                                                <span class="text-muted">Không có</span>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <strong>Số dư trước GD:</strong>
                                        <div class="mt-1">
                                            <%= transaction.balanceBefore.toLocaleString('vi-VN') %> xu
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <strong>Số dư sau GD:</strong>
                                        <div class="mt-1">
                                            <%= transaction.balanceAfter.toLocaleString('vi-VN') %> xu
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <strong>Mô tả:</strong>
                                    <div class="mt-1 p-2 bg-light rounded">
                                        <%= transaction.description %>
                                    </div>
                                </div>

                                <% if (transaction.metadata && Object.keys(transaction.metadata).length > 0) { %>
                                    <div class="mb-3">
                                        <strong>Thông tin bổ sung:</strong>
                                        <div class="mt-1">
                                            <pre class="bg-light p-2 rounded"><%= JSON.stringify(transaction.metadata, null, 2) %></pre>
                                        </div>
                                    </div>
                                <% } %>

                                <% if (transaction.orderId) { %>
                                    <div class="mb-3">
                                        <strong>Liên kết đơn hàng:</strong>
                                        <div class="mt-1">
                                            <a href="/admin/orders/<%= transaction.orderId %>" class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-external-link-alt"></i> Xem đơn hàng
                                            </a>
                                        </div>
                                    </div>
                                <% } %>

                                <% if (transaction.relatedBookId) { %>
                                    <div class="mb-3">
                                        <strong>Sách liên quan:</strong>
                                        <div class="mt-1">
                                            <a href="/admin/books/<%= transaction.relatedBookId %>" class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-book"></i> Xem sách
                                            </a>
                                        </div>
                                    </div>
                                <% } %>
                            </div>
                        </div>

                        <!-- Transaction Timeline -->
                        <div class="card mt-4">
                            <div class="card-header">
                                <h5 class="mb-0">Lịch sử thay đổi</h5>
                            </div>
                            <div class="card-body">
                                <div class="timeline">
                                    <div class="timeline-item completed">
                                        <strong>Tạo giao dịch</strong>
                                        <div class="text-muted">
                                            <%= new Date(transaction.createdAt).toLocaleString('vi-VN') %>
                                        </div>
                                    </div>

                                    <% if (transaction.status === 'completed') { %>
                                        <div class="timeline-item completed">
                                            <strong>Hoàn thành</strong>
                                            <div class="text-muted">
                                                <%= new Date(transaction.updatedAt).toLocaleString('vi-VN') %>
                                            </div>
                                        </div>
                                    <% } else if (transaction.status === 'failed') { %>
                                        <div class="timeline-item failed">
                                            <strong>Thất bại</strong>
                                            <div class="text-muted">
                                                <%= new Date(transaction.updatedAt).toLocaleString('vi-VN') %>
                                            </div>
                                        </div>
                                    <% } else if (transaction.status === 'cancelled') { %>
                                        <div class="timeline-item failed">
                                            <strong>Đã hủy</strong>
                                            <div class="text-muted">
                                                <%= new Date(transaction.updatedAt).toLocaleString('vi-VN') %>
                                            </div>
                                        </div>
                                    <% } else { %>
                                        <div class="timeline-item current">
                                            <strong>Đang chờ xử lý</strong>
                                            <div class="text-muted">
                                                Từ <%= new Date(transaction.createdAt).toLocaleString('vi-VN') %>
                                            </div>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- User Information -->
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">Thông tin người dùng</h5>
                            </div>
                            <div class="card-body">
                                <% if (transaction.user) { %>
                                    <div class="text-center mb-3">
                                        <div class="bg-primary rounded-circle d-inline-flex align-items-center justify-content-center" 
                                             style="width: 60px; height: 60px;">
                                            <i class="fas fa-user fa-2x text-white"></i>
                                        </div>
                                    </div>
                                    
                                    <div class="mb-2">
                                        <strong>Tên đăng nhập:</strong>
                                        <div><%= transaction.user.username %></div>
                                    </div>
                                    
                                    <div class="mb-2">
                                        <strong>Thư điện tử:</strong>
                                        <div><%= transaction.user.email %></div>
                                    </div>
                                    
                                    <div class="mb-2">
                                        <strong>Họ tên:</strong>
                                        <div><%= transaction.user.fullName || 'Chưa cập nhật' %></div>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <strong>Số dư hiện tại:</strong>
                                        <div class="text-primary fs-5">
                                            <i class="fas fa-coins"></i> 
                                            <%= transaction.user.coinBalance.toLocaleString('vi-VN') %> xu
                                        </div>
                                    </div>
                                    
                                    <div class="d-grid">
                                        <a href="/admin/users/<%= transaction.user._id %>/detail" class="btn btn-outline-primary">
                                            <i class="fas fa-user"></i> Xem hồ sơ
                                        </a>
                                    </div>
                                <% } else { %>
                                    <div class="text-center text-muted">
                                        <i class="fas fa-user-slash fa-3x mb-2"></i>
                                        <p>Không tìm thấy thông tin người dùng</p>
                                    </div>
                                <% } %>
                            </div>
                        </div>

                        <!-- Quick Actions -->
                        <div class="card mt-3">
                            <div class="card-header">
                                <h6 class="mb-0">Thao tác nhanh</h6>
                            </div>
                            <div class="card-body">
                                <div class="d-grid gap-2">
                                    <% if (transaction.status === 'completed' && transaction.type === 'purchase') { %>
                                        <button type="button" class="btn btn-warning btn-sm" onclick="createRefund()">
                                            <i class="fas fa-undo"></i> Tạo hoàn tiền
                                        </button>
                                    <% } %>
                                    
                                    <a href="/admin/coin-transactions?search=<%= transaction.user?.email || '' %>" 
                                       class="btn btn-info btn-sm">
                                        <i class="fas fa-history"></i> Lịch sử GD
                                    </a>
                                    
                                    <button type="button" class="btn btn-secondary btn-sm" onclick="exportTransaction()">
                                        <i class="fas fa-download"></i> Xuất tài liệu
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Status Update Modal -->
    <div class="modal fade" id="statusUpdateModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Cập nhật trạng thái giao dịch</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form method="POST" action="/admin/coin-transactions/<%= transaction._id %>/update-status">
                    <div class="modal-body">
                        <p>Bạn có chắc chắn muốn thay đổi trạng thái giao dịch?</p>
                        <input type="hidden" id="newStatus" name="status" value="">
                        <div class="mb-3">
                            <label for="adminNote" class="form-label">Ghi chú (tùy chọn)</label>
                            <textarea class="form-control" id="adminNote" name="adminNote" rows="3" 
                                      placeholder="Lý do thay đổi trạng thái..."></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-primary">Xác nhận</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function updateStatus(status) {
            document.getElementById('newStatus').value = status;
            const modal = new bootstrap.Modal(document.getElementById('statusUpdateModal'));
            modal.show();
        }

        function createRefund() {
            if (confirm('Tạo giao dịch hoàn tiền cho giao dịch này?')) {
                window.location.href = `/admin/coin-transactions/create-refund/<%= transaction._id %>`;
            }
        }

        function exportTransaction() {
            window.open(`/admin/coin-transactions/<%= transaction._id %>/export`, '_blank');
        }
    </script>
</body>
</html>