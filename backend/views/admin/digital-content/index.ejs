<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .admin-sidebar {
            background-color: #343a40;
            min-height: 100vh;
        }
        .admin-sidebar .nav-link {
            color: #adb5bd;
        }
        .admin-sidebar .nav-link:hover {
            color: #fff;
        }
        .admin-sidebar .nav-link.active {
            color: #fff;
            background-color: #495057;
        }
        .stats-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }
        .stats-card.digital {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        }
        .stats-card.preview {
            background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
        }
        .stats-card.price {
            background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
        }
        .digital-status {
            display: inline-block;
            padding: 2px 8px;
            border-radius: 12px;
            font-size: 11px;
            font-weight: bold;
        }
        .status-digital { background: #e3f2fd; color: #1565c0; }
        .status-preview { background: #e8f5e8; color: #2e7d32; }
        .status-none { background: #fafafa; color: #757575; }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 admin-sidebar p-3">
                <h4 class="text-white mb-4">
                    <i class="fas fa-cog"></i> Admin Panel
                </h4>
                <nav class="nav flex-column">
                    <a class="nav-link" href="/admin">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>
                    <a class="nav-link" href="/admin/books">
                        <i class="fas fa-book"></i> Quản lý sách
                    </a>
                    <a class="nav-link" href="/admin/inventory">
                        <i class="fas fa-warehouse"></i> Quản lý kho hàng
                    </a>
                    <a class="nav-link active" href="/admin/digital-content">
                        <i class="fas fa-tablet-alt"></i> Nội dung số
                    </a>
                    <a class="nav-link" href="/admin/promotions">
                        <i class="fas fa-tags"></i> Mã khuyến mãi
                    </a>
                    <a class="nav-link" href="/admin/coin-transactions">
                        <i class="fas fa-coins"></i> Giao dịch Coin
                    </a>
                    <a class="nav-link" href="/admin/users">
                        <i class="fas fa-users"></i> Quản lý người dùng
                    </a>
                    <a class="nav-link" href="/admin/categories">
                        <i class="fas fa-tags"></i> Quản lý danh mục
                    </a>
                    <a class="nav-link" href="/admin/reports">
                        <i class="fas fa-chart-line"></i> Báo cáo & Thống kê
                    </a>
                    <hr class="text-secondary">
                    <a class="nav-link" href="/books">
                        <i class="fas fa-home"></i> Về trang chủ
                    </a>
                    <a class="nav-link" href="/logout">
                        <i class="fas fa-sign-out-alt"></i> Đăng xuất
                    </a>
                </nav>
            </div>

            <!-- Main Content -->
            <div class="col-md-10">
                <div class="d-flex justify-content-between align-items-center py-3 border-bottom">
                    <h1><%= title %></h1>
                    <span class="badge bg-primary">Admin: <%= currentUser.username %></span>
                </div>

                <!-- Flash Messages -->
                <% if (typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
                    <div class="alert alert-success alert-dismissible fade show mt-3">
                        <%= success_msg %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <% if (typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
                    <div class="alert alert-danger alert-dismissible fade show mt-3">
                        <%= error_msg %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <!-- Statistics Cards -->
                <div class="row mt-4">
                    <div class="col-md-3">
                        <div class="card stats-card mb-3">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="flex-grow-1">
                                        <h5 class="card-title">Tổng sách</h5>
                                        <h2 class="mb-0"><%= stats.totalBooks %></h2>
                                    </div>
                                    <div>
                                        <i class="fas fa-books fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card stats-card digital mb-3">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="flex-grow-1">
                                        <h5 class="card-title">Có nội dung số</h5>
                                        <h2 class="mb-0"><%= stats.digitalAvailable %></h2>
                                    </div>
                                    <div>
                                        <i class="fas fa-file-download fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card stats-card preview mb-3">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="flex-grow-1">
                                        <h5 class="card-title">Có preview</h5>
                                        <h2 class="mb-0"><%= stats.withPreview %></h2>
                                    </div>
                                    <div>
                                        <i class="fas fa-eye fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card stats-card price mb-3">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="flex-grow-1">
                                        <h5 class="card-title">Giá TB (Coin)</h5>
                                        <h2 class="mb-0"><%= Math.round(stats.averagePrice || 0) %></h2>
                                    </div>
                                    <div>
                                        <i class="fas fa-coins fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Filters -->
                <div class="card mt-4">
                    <div class="card-body">
                        <form method="GET" class="row g-3">
                            <div class="col-md-3">
                                <label for="search" class="form-label">Tìm kiếm</label>
                                <input type="text" class="form-control" id="search" name="search" 
                                       value="<%= filters.search %>" placeholder="Tên sách, tác giả...">
                            </div>
                            <div class="col-md-2">
                                <label for="category" class="form-label">Danh mục</label>
                                <select class="form-select" id="category" name="category">
                                    <option value="">Tất cả</option>
                                    <% categories.forEach(cat => { %>
                                        <option value="<%= cat._id %>" <%= filters.category === cat._id.toString() ? 'selected' : '' %>>
                                            <%= cat.name %>
                                        </option>
                                    <% }) %>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label for="status" class="form-label">Trạng thái</label>
                                <select class="form-select" id="status" name="status">
                                    <option value="">Tất cả</option>
                                    <option value="digital" <%= filters.status === 'digital' ? 'selected' : '' %>>Có nội dung số</option>
                                    <option value="preview" <%= filters.status === 'preview' ? 'selected' : '' %>>Có preview</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">&nbsp;</label>
                                <div class="d-flex gap-2">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-search"></i> Lọc
                                    </button>
                                    <a href="/admin/digital-content" class="btn btn-secondary">
                                        <i class="fas fa-times"></i> Xóa bộ lọc
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Bulk Actions -->
                <div class="card mt-4">
                    <div class="card-header">
                        <h6 class="mb-0">Thao tác hàng loạt</h6>
                    </div>
                    <div class="card-body">
                        <form method="POST" action="/admin/digital-content/bulk-update" id="bulkActionForm">
                            <div class="row g-3">
                                <div class="col-md-3">
                                    <select class="form-select" name="action" required>
                                        <option value="">Chọn thao tác</option>
                                        <option value="enable_digital">Bật nội dung số</option>
                                        <option value="disable_digital">Tắt nội dung số</option>
                                        <option value="enable_preview">Bật preview</option>
                                        <option value="disable_preview">Tắt preview</option>
                                        <option value="set_coin_price">Đặt giá coin</option>
                                    </select>
                                </div>
                                <div class="col-md-2" id="coinPriceInput" style="display: none;">
                                    <input type="number" class="form-control" name="coinPrice" placeholder="Giá coin" min="0">
                                </div>
                                <div class="col-md-2">
                                    <button type="submit" class="btn btn-warning">
                                        <i class="fas fa-magic"></i> Áp dụng
                                    </button>
                                </div>
                                <div class="col-md-5">
                                    <small class="text-muted">
                                        Chọn sách ở bảng bên dưới, sau đó chọn thao tác và áp dụng
                                    </small>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Digital Content Table -->
                <div class="card mt-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <input type="checkbox" id="selectAll" class="form-check-input me-2">
                            <h5 class="mb-0">Danh sách nội dung số</h5>
                        </div>
                        <span class="badge bg-info">
                            Trang <%= pagination.current %> / <%= pagination.total %>
                        </span>
                    </div>
                    <div class="card-body">
                        <% if (books.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <th width="30"></th>
                                            <th>Sách</th>
                                            <th>Danh mục</th>
                                            <th>Giá Coin</th>
                                            <th>Trạng thái</th>
                                            <th>Preview</th>
                                            <th width="150">Thao tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% books.forEach(book => { %>
                                            <tr>
                                                <td>
                                                    <input type="checkbox" class="form-check-input book-checkbox" 
                                                           name="bookIds[]" value="<%= book._id %>">
                                                </td>
                                                <td>
                                                    <div class="d-flex">
                                                        <img src="<%= book.coverImage %>" alt="<%= book.title %>" 
                                                             style="width: 50px; height: 70px; object-fit: cover;" class="me-2">
                                                        <div>
                                                            <strong><%= book.title %></strong><br>
                                                            <small class="text-muted">
                                                                <%= book.author %>
                                                            </small><br>
                                                            <small class="text-primary">
                                                                <%= book.price.toLocaleString('vi-VN') %>₫
                                                            </small>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <span class="badge bg-secondary">
                                                        <%= book.category?.name || 'Chưa phân loại' %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <% if (book.coinPrice && book.coinPrice > 0) { %>
                                                        <span class="badge bg-warning text-dark fs-6">
                                                            <%= book.coinPrice %> <i class="fas fa-coins"></i>
                                                        </span>
                                                    <% } else { %>
                                                        <span class="text-muted">Chưa đặt</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <% if (book.isDigitalAvailable) { %>
                                                        <span class="digital-status status-digital">
                                                            <i class="fas fa-download"></i> Digital
                                                        </span>
                                                    <% } else { %>
                                                        <span class="digital-status status-none">
                                                            <i class="fas fa-times"></i> Không
                                                        </span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <% if (book.hasPreview && book.previewContent) { %>
                                                        <% 
                                                            // Đảm bảo hiển thị đúng số chương
                                                            const chapterCount = book.previewContent.chapters 
                                                                ? book.previewContent.chapters.length 
                                                                : (book.previewContent.totalChapters || 0);
                                                        %>
                                                        <span class="digital-status status-preview">
                                                            <i class="fas fa-eye"></i> <%= chapterCount %> chương
                                                        </span>
                                                    <% } else if (book.hasPreview) { %>
                                                        <span class="digital-status status-preview">
                                                            <i class="fas fa-exclamation-triangle"></i> Cần cập nhật
                                                        </span>
                                                    <% } else { %>
                                                        <span class="digital-status status-none">
                                                            <i class="fas fa-times"></i> Không
                                                        </span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <div class="btn-group btn-group-sm" role="group">
                                                        <a href="/admin/digital-content/<%= book._id %>/manage" 
                                                           class="btn btn-outline-primary" title="Quản lý">
                                                            <i class="fas fa-cog"></i>
                                                        </a>
                                                        
                                                        <% if (book.previewContent) { %>
                                                            <button type="button" class="btn btn-outline-info" 
                                                                    onclick="showPreview('<%= book._id %>')" title="Xem preview">
                                                                <i class="fas fa-eye"></i>
                                                            </button>
                                                        <% } %>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>

                            <!-- Pagination -->
                            <% if (pagination.total > 1) { %>
                                <nav class="mt-4">
                                    <ul class="pagination justify-content-center">
                                        <% if (pagination.hasPrev) { %>
                                            <li class="page-item">
                                                <a class="page-link" href="?page=<%= pagination.prev %>&search=<%= filters.search %>&category=<%= filters.category %>&status=<%= filters.status %>">
                                                    Trước
                                                </a>
                                            </li>
                                        <% } %>

                                        <% for (let i = Math.max(1, pagination.current - 2); i <= Math.min(pagination.total, pagination.current + 2); i++) { %>
                                            <li class="page-item <%= i === pagination.current ? 'active' : '' %>">
                                                <a class="page-link" href="?page=<%= i %>&search=<%= filters.search %>&category=<%= filters.category %>&status=<%= filters.status %>">
                                                    <%= i %>
                                                </a>
                                            </li>
                                        <% } %>

                                        <% if (pagination.hasNext) { %>
                                            <li class="page-item">
                                                <a class="page-link" href="?page=<%= pagination.next %>&search=<%= filters.search %>&category=<%= filters.category %>&status=<%= filters.status %>">
                                                    Sau
                                                </a>
                                            </li>
                                        <% } %>
                                    </ul>
                                </nav>
                            <% } %>
                        <% } else { %>
                            <div class="text-center py-5">
                                <i class="fas fa-tablet-alt fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">Không có sách nào</h5>
                                <p class="text-muted">Thử thay đổi bộ lọc để xem thêm sách</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Preview Modal -->
    <div class="modal fade" id="previewModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Nội dung Preview</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="previewContent">
                    <!-- Preview content will be loaded here -->
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Select all functionality
        document.getElementById('selectAll').addEventListener('change', function() {
            const checkboxes = document.querySelectorAll('.book-checkbox');
            checkboxes.forEach(checkbox => {
                checkbox.checked = this.checked;
            });
        });

        // Show/hide coin price input based on action
        document.querySelector('select[name="action"]').addEventListener('change', function() {
            const coinPriceInput = document.getElementById('coinPriceInput');
            if (this.value === 'set_coin_price') {
                coinPriceInput.style.display = 'block';
                coinPriceInput.querySelector('input').required = true;
            } else {
                coinPriceInput.style.display = 'none';
                coinPriceInput.querySelector('input').required = false;
            }
        });

        // Bulk action form submission
        document.getElementById('bulkActionForm').addEventListener('submit', function(e) {
            const checkedBoxes = document.querySelectorAll('.book-checkbox:checked');
            if (checkedBoxes.length === 0) {
                e.preventDefault();
                alert('Vui lòng chọn ít nhất một sách');
                return;
            }

            const action = this.querySelector('select[name="action"]').value;
            if (!action) {
                e.preventDefault();
                alert('Vui lòng chọn thao tác');
                return;
            }

            // Add selected book IDs to form
            checkedBoxes.forEach(checkbox => {
                const input = document.createElement('input');
                input.type = 'hidden';
                input.name = 'bookIds[]';
                input.value = checkbox.value;
                this.appendChild(input);
            });
        });

        // Show preview function
        async function showPreview(bookId) {
            try {
                const response = await fetch(`/admin/api/digital-content/${bookId}/preview`);
                if (!response.ok) {
                    throw new Error('Không thể tải preview');
                }

                const data = await response.json();
                const preview = data.data;

                let content = `
                    <div class="mb-3">
                        <h6>Thông tin tổng quan:</h6>
                        <p><strong>Tổng chương:</strong> ${preview.totalChapters}</p>
                        <p><strong>Tổng từ:</strong> ${preview.totalWords.toLocaleString()}</p>
                    </div>
                    <div>
                        <h6>Danh sách chương:</h6>
                `;

                preview.chapterTitles.forEach(chapter => {
                    content += `
                        <div class="border p-2 mb-2 rounded">
                            <strong>Chương ${chapter.number}:</strong> ${chapter.title}
                            <small class="text-muted d-block">${chapter.wordCount} từ</small>
                        </div>
                    `;
                });

                content += '</div>';

                document.getElementById('previewContent').innerHTML = content;
                const modal = new bootstrap.Modal(document.getElementById('previewModal'));
                modal.show();
            } catch (error) {
                alert('Có lỗi xảy ra khi tải preview: ' + error.message);
            }
        }
    </script>
</body>
</html>