<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        <%- include('../../partials/adminHeader') %>
        .stats-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }
        .stats-card.total {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        }
        .stats-card.active {
            background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
        }
        .stats-card.expired {
            background: linear-gradient(135deg, #ff7675 0%, #fd79a8 100%);
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <%- include('../../partials/adminSidebar') %>

            <!-- Main Content -->
            <div class="col-md-10">
                <div class="d-flex justify-content-between align-items-center py-3 border-bottom">
                    <h1><%= title %></h1>
                    <div>
                        <a href="/admin/promotions/create" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Tạo mã khuyến mãi
                        </a>
                        <span class="badge bg-secondary ms-2">Quản trị viên: <%= currentUser.username %></span>
                    </div>
                </div>

                <!-- Flash Messages -->
                <% if (typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
                    <div class="alert alert-success alert-dismissible fade show mt-3">
                        <%= success_msg %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <% if (typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
                    <div class="alert alert-danger alert-dismissible fade show mt-3">
                        <%= error_msg %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <!-- Statistics Cards -->
                <div class="row mt-4 g-3">
                    <div class="col-md-3">
                        <div class="card stats-card" style="background: linear-gradient(135deg,#667eea 0%,#764ba2 100%);">
                            <div class="card-body">
                                <h6 class="text-uppercase mb-1">Tổng mã</h6>
                                <h2 class="fw-bold"><%= stats.total %></h2>
                                <p class="mb-0"><i class="fas fa-ticket-alt me-2"></i>Tất cả mã khuyến mãi</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card stats-card" style="background: linear-gradient(135deg,#43e97b 0%,#38f9d7 100%);">
                            <div class="card-body">
                                <h6 class="text-uppercase mb-1">Đang hoạt động</h6>
                                <h2 class="fw-bold"><%= stats.active %></h2>
                                <p class="mb-0"><i class="fas fa-check-circle me-2"></i>Mã đang sử dụng</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card stats-card" style="background: linear-gradient(135deg,#ff7675 0%,#fd79a8 100%);">
                            <div class="card-body">
                                <h6 class="text-uppercase mb-1">Hết hạn</h6>
                                <h2 class="fw-bold"><%= stats.expired %></h2>
                                <p class="mb-0"><i class="fas fa-times-circle me-2"></i>Mã đã hết hạn</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card stats-card" style="background: linear-gradient(135deg,#4facfe 0%,#00f2fe 100%);">
                            <div class="card-body">
                                <h6 class="text-uppercase mb-1">Lượt sử dụng</h6>
                                <h2 class="fw-bold"><%= stats.totalUsage %></h2>
                                <p class="mb-0"><i class="fas fa-chart-line me-2"></i>Tổng lượt dùng</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Filters -->
                <div class="card mt-4">
                    <div class="card-body">
                        <form method="GET" class="row g-3">
                            <div class="col-md-4">
                                <label for="search" class="form-label">Tìm kiếm</label>
                                <input type="text" class="form-control" id="search" name="search" 
                                       value="<%= filters.search %>" placeholder="Mã khuyến mãi, mô tả...">
                            </div>
                            <div class="col-md-3">
                                <label for="status" class="form-label">Trạng thái</label>
                                <select class="form-select" id="status" name="status">
                                    <option value="">Tất cả</option>
                                    <option value="active" <%= filters.status === 'active' ? 'selected' : '' %>>Đang hoạt động</option>
                                    <option value="inactive" <%= filters.status === 'inactive' ? 'selected' : '' %>>Đã tắt</option>
                                    <option value="expired" <%= filters.status === 'expired' ? 'selected' : '' %>>Hết hạn</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">&nbsp;</label>
                                <div class="d-flex gap-2">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-search"></i> Lọc
                                    </button>
                                    <a href="/admin/promotions" class="btn btn-secondary">
                                        <i class="fas fa-times"></i> Xóa bộ lọc
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Promotions Table -->
                <div class="card mt-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Danh sách mã khuyến mãi</h5>
                        <span class="badge bg-info">
                            Trang <%= pagination.current %> / <%= pagination.total %>
                        </span>
                    </div>
                    <div class="card-body">
                        <% if (promotions.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Mã</th>
                                            <th>Mô tả</th>
                                            <th>Giảm giá</th>
                                            <th>Sử dụng</th>
                                            <th>Thời hạn</th>
                                            <th>Trạng thái</th>
                                            <th width="150">Thao tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% promotions.forEach(promo => { 
                                            const now = new Date();
                                            const isExpired = now > promo.endDate;
                                            const isValid = promo.isActive && !isExpired && 
                                                           (promo.maxUsage === null || promo.currentUsage < promo.maxUsage);
                                        %>
                                            <tr>
                                                <td>
                                                    <div>
                                                        <strong class="text-primary"><%= promo.code %></strong><br>
                                                        <small class="text-muted">
                                                            Tạo: <%= new Date(promo.createdAt).toLocaleDateString('vi-VN') %>
                                                        </small>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div style="max-width: 200px;">
                                                        <%= promo.description %>
                                                        <% if (promo.minimumPurchase > 0) { %>
                                                            <br><small class="text-info">
                                                                Tối thiểu: <%= promo.minimumPurchase.toLocaleString('vi-VN') %>₫
                                                            </small>
                                                        <% } %>
                                                    </div>
                                                </td>
                                                <td>
                                                    <% if (promo.discountType === 'percentage') { %>
                                                        <span class="badge bg-warning text-dark fs-6">
                                                            <%= promo.discountValue %>%
                                                        </span>
                                                    <% } else { %>
                                                        <span class="badge bg-success fs-6">
                                                            -<%= promo.discountValue.toLocaleString('vi-VN') %>₫
                                                        </span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <div class="text-center">
                                                        <strong><%= promo.currentUsage %></strong>
                                                        <% if (promo.maxUsage !== null) { %>
                                                            / <%= promo.maxUsage %>
                                                        <% } else { %>
                                                            / ∞
                                                        <% } %>
                                                        
                                                        <% if (promo.maxUsage !== null) { %>
                                                            <div class="progress mt-1" style="height: 4px;">
                                                                <div class="progress-bar" data-width="<%= promo.usagePercentage %>"></div>
                                                            </div>
                                                        <% } %>
                                                    </div>
                                                </td>
                                                <td>
                                                    <small>
                                                        <strong>Từ:</strong> <%= new Date(promo.startDate).toLocaleDateString('vi-VN') %><br>
                                                        <strong>Đến:</strong> <%= new Date(promo.endDate).toLocaleDateString('vi-VN') %>
                                                    </small>
                                                </td>
                                                <td>
                                                    <% if (isValid) { %>
                                                        <span class="badge bg-success">Hoạt động</span>
                                                    <% } else if (!promo.isActive) { %>
                                                        <span class="badge bg-secondary">Đã tắt</span>
                                                    <% } else if (isExpired) { %>
                                                        <span class="badge bg-danger">Hết hạn</span>
                                                    <% } else if (promo.maxUsage !== null && promo.currentUsage >= promo.maxUsage) { %>
                                                        <span class="badge bg-warning text-dark">Hết lượt</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <div class="btn-group btn-group-sm" role="group">
                                                        <a href="/admin/promotions/<%= promo._id %>/edit" 
                                                           class="btn btn-outline-primary" title="Chỉnh sửa">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        
                                                        <form method="POST" action="/admin/promotions/<%= promo._id %>/toggle" 
                                                              class="d-inline" onsubmit="return confirm('Xác nhận thay đổi trạng thái?')">
                                                            <button type="submit" class="btn <%= promo.isActive ? 'btn-outline-warning' : 'btn-outline-success' %>" 
                                                                    title="<%= promo.isActive ? 'Tạm dừng' : 'Kích hoạt' %>">
                                                                <i class="fas <%= promo.isActive ? 'fa-pause' : 'fa-play' %>"></i>
                                                            </button>
                                                        </form>

                                                        <% if (promo.currentUsage === 0) { %>
                                                            <form method="POST" action="/admin/promotions/<%= promo._id %>/delete" 
                                                                  class="d-inline" onsubmit="return confirm('Xác nhận xóa mã khuyến mãi này?')">
                                                                <button type="submit" class="btn btn-outline-danger" title="Xóa">
                                                                    <i class="fas fa-trash"></i>
                                                                </button>
                                                            </form>
                                                        <% } %>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>

                            <!-- Pagination -->
                            <% if (pagination.total > 1) { %>
                                <nav class="mt-4">
                                    <ul class="pagination justify-content-center">
                                        <% if (pagination.hasPrev) { %>
                                            <li class="page-item">
                                                <a class="page-link" href="?page=<%= pagination.prev %>&search=<%= filters.search %>&status=<%= filters.status %>">
                                                    Trước
                                                </a>
                                            </li>
                                        <% } %>

                                        <% for (let i = Math.max(1, pagination.current - 2); i <= Math.min(pagination.total, pagination.current + 2); i++) { %>
                                            <li class="page-item <%= i === pagination.current ? 'active' : '' %>">
                                                <a class="page-link" href="?page=<%= i %>&search=<%= filters.search %>&status=<%= filters.status %>">
                                                    <%= i %>
                                                </a>
                                            </li>
                                        <% } %>

                                        <% if (pagination.hasNext) { %>
                                            <li class="page-item">
                                                <a class="page-link" href="?page=<%= pagination.next %>&search=<%= filters.search %>&status=<%= filters.status %>">
                                                    Sau
                                                </a>
                                            </li>
                                        <% } %>
                                    </ul>
                                </nav>
                            <% } %>
                        <% } else { %>
                            <div class="text-center py-5">
                                <i class="fas fa-ticket-alt fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">Chưa có mã khuyến mãi nào</h5>
                                <p class="text-muted">Tạo mã khuyến mãi đầu tiên để thu hút khách hàng</p>
                                <a href="/admin/promotions/create" class="btn btn-primary">
                                    <i class="fas fa-plus"></i> Tạo mã khuyến mãi
                                </a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Set progress bar widths from data attributes
        document.addEventListener('DOMContentLoaded', function() {
            const progressBars = document.querySelectorAll('.progress-bar[data-width]');
            progressBars.forEach(bar => {
                const width = bar.getAttribute('data-width');
                bar.style.width = width + '%';
            });
        });
    </script>
</body>
</html>