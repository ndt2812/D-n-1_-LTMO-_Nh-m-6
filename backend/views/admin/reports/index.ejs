<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <style>
    <%- include('../../partials/adminHeader') %>
    .stats-card {
      border-radius: 12px;
      border: none;
      color: #fff;
      position: relative;
      overflow: hidden;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    }
    .stats-card::after {
      content: '';
      position: absolute;
      width: 100px;
      height: 100px;
      border-radius: 50%;
      background: rgba(255, 255, 255, 0.15);
      top: -30px;
      right: -30px;
    }
    .stats-card .card-body {
      position: relative;
      z-index: 2;
    }
    .section-title {
      font-size: 1.1rem;
      font-weight: 600;
      color: #495057;
    }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <%- include('../../partials/adminSidebar') %>

      <div class="col-md-10">
        <div class="d-flex justify-content-between align-items-center py-3 border-bottom">
          <h1 class="h3 mb-0"><%= title %></h1>
          <% if (currentUser) { %>
            <span class="badge bg-primary">Admin: <%= currentUser.username %></span>
          <% } %>
        </div>

        <% if (messages?.error && messages.error.length) { %>
          <div class="alert alert-danger alert-dismissible fade show mt-3">
            <%= messages.error[0] %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        <% } %>

        <% if (messages?.success && messages.success.length) { %>
          <div class="alert alert-success alert-dismissible fade show mt-3">
            <%= messages.success[0] %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        <% } %>

        <div class="card mt-4">
          <div class="card-body">
            <form class="row g-3 align-items-end" method="GET">
              <div class="col-md-4">
                <label for="startDate" class="form-label">Từ ngày</label>
                <input type="date" class="form-control" id="startDate" name="startDate" value="<%= filters.startDate %>">
              </div>
              <div class="col-md-4">
                <label for="endDate" class="form-label">Đến ngày</label>
                <input type="date" class="form-control" id="endDate" name="endDate" value="<%= filters.endDate %>">
              </div>
              <div class="col-md-4">
                <button type="submit" class="btn btn-primary w-100">
                  <i class="fas fa-filter me-2"></i>Lọc dữ liệu
                </button>
              </div>
            </form>
          </div>
        </div>

        <div class="row mt-4 g-3">
          <div class="col-md-3">
            <div class="card stats-card" style="background: linear-gradient(135deg,#43cea2 0%,#185a9d 100%);">
              <div class="card-body">
                <h6 class="text-uppercase mb-1">Doanh thu</h6>
                <h2 class="fw-bold"><%= reportData.summary.totalRevenue.toLocaleString('vi-VN') %>₫</h2>
                <p class="mb-0"><i class="fas fa-money-bill-wave me-2"></i>Đã trừ mã khuyến mãi</p>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card stats-card" style="background: linear-gradient(135deg,#667eea 0%,#764ba2 100%);">
              <div class="card-body">
                <h6 class="text-uppercase mb-1">Tổng đơn</h6>
                <h2 class="fw-bold"><%= reportData.summary.totalOrders %></h2>
                <p class="mb-0"><i class="fas fa-shopping-cart me-2"></i>Đã loại đơn hủy</p>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card stats-card" style="background: linear-gradient(135deg,#f7971e 0%,#ffd200 100%);">
              <div class="card-body">
                <h6 class="text-uppercase mb-1">Giá trị TB</h6>
                <h2 class="fw-bold"><%= Math.round(reportData.summary.avgOrderValue).toLocaleString('vi-VN') %>₫</h2>
                <p class="mb-0"><i class="fas fa-chart-line me-2"></i>Average Order Value</p>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card stats-card" style="background: linear-gradient(135deg,#ff512f 0%,#dd2476 100%);">
              <div class="card-body">
                <h6 class="text-uppercase mb-1">Khuyến mãi</h6>
                <h2 class="fw-bold"><%= reportData.summary.totalDiscount.toLocaleString('vi-VN') %>₫</h2>
                <p class="mb-0"><i class="fas fa-tags me-2"></i>Tổng số tiền giảm</p>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card stats-card" style="background: linear-gradient(135deg,#4facfe 0%,#00f2fe 100%);">
              <div class="card-body">
                <h6 class="text-uppercase mb-1">Khách hàng</h6>
                <h2 class="fw-bold"><%= reportData.summary.uniqueCustomers %></h2>
                <p class="mb-0"><i class="fas fa-users me-2"></i>Khách phát sinh đơn</p>
              </div>
            </div>
          </div>
        </div>

        <div class="row mt-4">
          <div class="col-lg-8">
            <div class="card mb-4">
              <div class="card-header bg-white">
                <span class="section-title"><i class="fas fa-chart-area me-2 text-primary"></i>Doanh thu theo ngày</span>
              </div>
              <div class="card-body">
                <% if (reportData.dailyRevenue.length === 0) { %>
                  <p class="text-muted mb-0">Chưa có dữ liệu trong khoảng thời gian này.</p>
                <% } else { %>
                  <div class="table-responsive">
                    <table class="table table-sm align-middle mb-0">
                      <thead>
                        <tr>
                          <th>Ngày</th>
                          <th class="text-end">Đơn hàng</th>
                          <th class="text-end">Doanh thu</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% reportData.dailyRevenue.forEach(function(day) { %>
                          <tr>
                            <td><%= day._id %></td>
                            <td class="text-end"><%= day.orders %></td>
                            <td class="text-end"><%= day.revenue.toLocaleString('vi-VN') %> đ</td>
                          </tr>
                        <% }); %>
                      </tbody>
                    </table>
                  </div>
                <% } %>
              </div>
            </div>

            <div class="card mb-4">
              <div class="card-header bg-white">
                <span class="section-title"><i class="fas fa-cubes me-2 text-success"></i>Sản phẩm bán chạy</span>
              </div>
              <div class="card-body">
                <% if (reportData.topBooks.length === 0) { %>
                  <p class="text-muted mb-0">Chưa có đơn hàng nào đáp ứng điều kiện.</p>
                <% } else { %>
                  <div class="table-responsive">
                    <table class="table table-striped align-middle mb-0">
                      <thead>
                        <tr>
                          <th>Sách</th>
                          <th class="text-end">Số lượng</th>
                          <th class="text-end">Doanh thu</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% reportData.topBooks.forEach(function(book) { %>
                          <tr>
                            <td><a href="/books/<%= book.bookId %>" target="_blank"><%= book.title %></a></td>
                            <td class="text-end"><%= book.quantity %></td>
                            <td class="text-end"><%= book.revenue.toLocaleString('vi-VN') %> đ</td>
                          </tr>
                        <% }); %>
                      </tbody>
                    </table>
                  </div>
                <% } %>
              </div>
            </div>
          </div>
          <div class="col-lg-4">
            <div class="card mb-4">
              <div class="card-header bg-white">
                <span class="section-title"><i class="fas fa-stream me-2 text-warning"></i>Trạng thái đơn</span>
              </div>
              <div class="card-body">
                <% if (reportData.statusBreakdown.length === 0) { %>
                  <p class="text-muted mb-0">Không có đơn hàng trong khoảng thời gian này.</p>
                <% } else { %>
                  <% reportData.statusBreakdown.forEach(function(status) { %>
                    <div class="d-flex justify-content-between align-items-center py-1 border-bottom">
                      <span class="text-capitalize"><%= status._id %></span>
                      <span class="badge bg-light text-dark"><%= status.count %> đơn</span>
                    </div>
                  <% }); %>
                <% } %>
              </div>
            </div>

            <div class="card mb-4">
              <div class="card-header bg-white">
                <span class="section-title"><i class="fas fa-gift me-2 text-danger"></i>Mã khuyến mãi nổi bật</span>
              </div>
              <div class="card-body">
                <% if (reportData.promotionUsage.length === 0) { %>
                  <p class="text-muted mb-0">Chưa có mã khuyến mãi nào được sử dụng.</p>
                <% } else { %>
                  <% reportData.promotionUsage.forEach(function(promo) { %>
                    <div class="border rounded p-3 mb-3">
                      <div class="d-flex justify-content-between align-items-center mb-2">
                        <strong class="text-uppercase"><%= promo._id %></strong>
                        <span class="badge bg-primary"><%= promo.timesUsed %> lượt</span>
                      </div>
                      <div class="text-muted small">Tổng giảm: <strong><%= promo.totalDiscount.toLocaleString('vi-VN') %> đ</strong></div>
                    </div>
                  <% }); %>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

