<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        <%- include('../../partials/adminHeader') %>
        .image-preview {
            max-width: 200px;
            max-height: 300px;
            border: 2px dashed #dee2e6;
            border-radius: 5px;
            padding: 10px;
        }
        .image-preview img {
            max-width: 100%;
            height: auto;
        }
        .current-cover {
            max-width: 150px;
            height: auto;
            border-radius: 5px;
        }
        .required {
            color: #dc3545;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <%- include('../../partials/adminSidebar') %>

            <!-- Main Content -->
            <div class="col-md-10">
                    <div class="d-flex justify-content-between align-items-center py-3 border-bottom">
                        <h1><%= title %></h1>
                        <div>
                            <a href="/admin/books" class="btn btn-outline-secondary me-2">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                            <a href="/books/<%= book._id %>" class="btn btn-outline-info me-2" target="_blank">
                                <i class="fas fa-eye"></i> Xem sách
                            </a>
                            <span class="badge bg-primary">Quản trị viên: <%= currentUser.username %></span>
                        </div>
                    </div>                <!-- Flash Messages -->
                <% if (errors && errors.length > 0) { %>
                    <div class="alert alert-danger alert-dismissible fade show mt-3">
                        <h6>Có lỗi xảy ra:</h6>
                        <ul class="mb-0">
                            <% errors.forEach(error => { %>
                                <li><%= error.msg %></li>
                            <% }) %>
                        </ul>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <!-- Edit Book Form -->
                <div class="row mt-4">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">Chỉnh sửa thông tin sách</h5>
                            </div>
                            <div class="card-body">
                                <form method="POST" action="/admin/books/<%= book._id %>/edit" enctype="multipart/form-data">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label class="form-label">
                                                    Tiêu đề <span class="required">*</span>
                                                </label>
                                                <input type="text" class="form-control" name="title" 
                                                       value="<%= book.title %>" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label class="form-label">
                                                    Tác giả <span class="required">*</span>
                                                </label>
                                                <input type="text" class="form-control" name="author" 
                                                       value="<%= book.author %>" required>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">
                                            Mô tả <span class="required">*</span>
                                        </label>
                                        <textarea class="form-control" name="description" rows="4" required><%= book.description %></textarea>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="mb-3">
                                                <label class="form-label">
                                                    Giá (VNĐ) <span class="required">*</span>
                                                </label>
                                                <input type="number" class="form-control" name="price" 
                                                       value="<%= book.price %>" min="0" step="1000" required>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="mb-3">
                                                <label class="form-label">
                                                    Giá xu (tùy chọn)
                                                </label>
                                                <input type="number" class="form-control" name="coinPrice" 
                                                       value="<%= book.coinPrice || '' %>" min="0" step="1"
                                                       placeholder="Để trống nếu không bán bằng xu">
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="mb-3">
                                                <label class="form-label">
                                                    Số lượng <span class="required">*</span>
                                                </label>
                                                <input type="number" class="form-control" name="stock" 
                                                       value="<%= book.stock %>" min="0" required>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label class="form-label">
                                                    Danh mục <span class="required">*</span>
                                                </label>
                                                <select class="form-select" name="category" required>
                                                    <option value="">Chọn danh mục...</option>
                                                    <% categories.forEach(cat => { %>
                                                        <option value="<%= cat._id %>" 
                                                                <%= book.category._id.toString() === cat._id.toString() ? 'selected' : '' %>>
                                                            <%= cat.name %>
                                                        </option>
                                                    <% }) %>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label class="form-label">ISBN (tùy chọn)</label>
                                                <input type="text" class="form-control" name="isbn" 
                                                       value="<%= book.isbn || '' %>" placeholder="978-...">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Ngày xuất bản (tùy chọn)</label>
                                        <input type="date" class="form-control" name="publishedDate" 
                                               value="<%= book.publishedDate ? new Date(book.publishedDate).toISOString().split('T')[0] : '' %>">
                                    </div>

                                    <div class="mb-4">
                                        <label class="form-label">Ảnh bìa sách mới (tùy chọn)</label>
                                        <div class="mb-3">
                                            <label class="form-label small text-muted">Hoặc nhập link ảnh (ưu tiên)</label>
                                            <input type="url" class="form-control" name="coverImageUrl" 
                                                   id="coverImageUrl" placeholder="https://example.com/image.jpg"
                                                   value="<%= book.coverImage && book.coverImage.startsWith('http') ? book.coverImage : '' %>"
                                                   onchange="previewImageFromUrl(this.value)">
                                            <div class="form-text">Nhập link ảnh từ internet (JPG, PNG, GIF)</div>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label small text-muted">Hoặc tải lên file ảnh</label>
                                            <input type="file" class="form-control" name="coverImage" 
                                                   id="coverImageFile" accept="image/*" onchange="previewImageFromFile(this)">
                                            <div class="form-text">Chọn file ảnh mới để thay thế ảnh hiện tại (JPG, PNG, GIF). Tối đa 5MB.</div>
                                        </div>
                                        <div class="alert alert-info mb-0">
                                            <small>
                                                <i class="fas fa-info-circle"></i>
                                                <strong>Lưu ý:</strong> Nếu nhập cả link và tải file, hệ thống sẽ ưu tiên sử dụng link ảnh. Để trống cả hai sẽ giữ nguyên ảnh hiện tại.
                                            </small>
                                        </div>
                                    </div>

                                    <!-- Book Statistics -->
                                    <div class="card bg-light mb-3">
                                        <div class="card-header">
                                            <h6 class="mb-0">Thống kê sách</h6>
                                        </div>
                                        <div class="card-body">
                                            <div class="row text-center">
                                                <div class="col-md-3">
                                                    <h5 class="text-warning">
                                                        <% for (let i = 1; i <= 5; i++) { %>
                                                            <i class="fas fa-star<%= i <= book.averageRating ? '' : ' text-muted' %>"></i>
                                                        <% } %>
                                                    </h5>
                                                    <small>Đánh giá trung bình</small>
                                                </div>
                                                <div class="col-md-3">
                                                    <h5 class="text-info"><%= book.totalReviews %></h5>
                                                    <small>Số lượt đánh giá</small>
                                                </div>
                                                <div class="col-md-3">
                                                    <h5 class="text-success">
                                                        <%= book.isDigitalAvailable ? 'Có' : 'Không' %>
                                                    </h5>
                                                    <small>Bản điện tử</small>
                                                </div>
                                                <div class="col-md-3">
                                                    <h5 class="text-primary">
                                                        <%= book.hasPreview ? 'Có' : 'Không' %>
                                                    </h5>
                                                    <small>Xem trước</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                        <a href="/admin/books" class="btn btn-secondary me-md-2">
                                            <i class="fas fa-times"></i> Hủy bỏ
                                        </a>
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-save"></i> Cập nhật sách
                                        </button>
                                    </div>
                                </form>

                                <!-- Danger Zone -->
                                <hr class="mt-4">
                                <div class="card border-danger">
                                    <div class="card-header bg-danger text-white">
                                        <h6 class="mb-0">
                                            <i class="fas fa-exclamation-triangle"></i> Vùng nguy hiểm
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <p class="text-muted mb-3">
                                            Sau khi xóa sách, tất cả dữ liệu liên quan sẽ bị mất vĩnh viễn và không thể khôi phục.
                                        </p>
                                        <form method="POST" action="/admin/books/<%= book._id %>/delete" class="d-inline">
                                            <button type="submit" class="btn btn-outline-danger"
                                                    onclick="return confirm('Bạn có CHẮC CHẮN muốn xóa sách này? Thao tác này không thể hoàn tác!')">
                                                <i class="fas fa-trash"></i> Xóa sách vĩnh viễn
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Current Cover & Preview -->
                    <div class="col-md-4">
                        <!-- Current Cover -->
                        <div class="card">
                            <div class="card-header">
                                <h6 class="mb-0">Ảnh bìa hiện tại</h6>
                            </div>
                            <div class="card-body text-center">
                                <% if (book.coverImage) { %>
                                    <% if (book.coverImage.startsWith('http')) { %>
                                        <img src="<%= book.coverImage %>" alt="Ảnh bìa hiện tại" class="current-cover" onerror="this.onerror=null; this.parentElement.innerHTML='<div class=\'bg-light p-4 rounded\'><i class=\'fas fa-exclamation-triangle fa-3x text-warning\'></i><p class=\'text-muted mt-2\'>Không thể tải ảnh</p></div>'">
                                    <% } else { %>
                                        <img src="/uploads/<%= book.coverImage %>" alt="Ảnh bìa hiện tại" class="current-cover" onerror="this.onerror=null; this.parentElement.innerHTML='<div class=\'bg-light p-4 rounded\'><i class=\'fas fa-exclamation-triangle fa-3x text-warning\'></i><p class=\'text-muted mt-2\'>Không thể tải ảnh</p></div>'">
                                    <% } %>
                                <% } else { %>
                                    <div class="bg-light p-4 rounded">
                                        <i class="fas fa-image fa-3x text-muted"></i>
                                        <p class="text-muted mt-2">Chưa có ảnh bìa</p>
                                    </div>
                                <% } %>
                            </div>
                        </div>

                        <!-- New Image Preview -->
                        <div class="card mt-3">
                            <div class="card-header">
                                <h6 class="mb-0">Xem trước ảnh mới</h6>
                            </div>
                            <div class="card-body text-center">
                                <div id="imagePreview" class="image-preview">
                                    <i class="fas fa-image fa-3x text-muted"></i>
                                    <p class="text-muted mt-2">Chọn ảnh hoặc nhập link để xem trước</p>
                                </div>
                            </div>
                        </div>

                        <!-- Book Info -->
                        <div class="card mt-3">
                            <div class="card-header">
                                <h6 class="mb-0">Thông tin thêm</h6>
                            </div>
                            <div class="card-body">
                                <small class="text-muted">
                                    <strong>Ngày tạo:</strong><br>
                                    <%= new Date(book.createdAt).toLocaleString('vi-VN') %>
                                </small>
                                <hr>
                                <small class="text-muted">
                                    <strong>Cập nhật cuối:</strong><br>
                                    <%= new Date(book.updatedAt).toLocaleString('vi-VN') %>
                                </small>
                                <% if (book.isbn) { %>
                                    <hr>
                                    <small class="text-muted">
                                        <strong>ISBN:</strong><br>
                                        <%= book.isbn %>
                                    </small>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function previewImageFromFile(input) {
            const preview = document.getElementById('imagePreview');
            const urlInput = document.getElementById('coverImageUrl');
            
            // Clear URL input when file is selected
            if (input.files && input.files[0]) {
                urlInput.value = '';
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.innerHTML = `<img src="${e.target.result}" alt="Xem trước" class="img-fluid">`;
                }
                reader.readAsDataURL(input.files[0]);
            } else {
                // If no file and no URL, show placeholder
                if (!urlInput.value) {
                    preview.innerHTML = `
                        <i class="fas fa-image fa-3x text-muted"></i>
                        <p class="text-muted mt-2">Chọn ảnh hoặc nhập link để xem trước</p>
                    `;
                }
            }
        }

        function previewImageFromUrl(url) {
            const preview = document.getElementById('imagePreview');
            const fileInput = document.getElementById('coverImageFile');
            
            // Clear file input when URL is entered
            if (url && url.trim()) {
                fileInput.value = '';
                // Validate URL
                try {
                    new URL(url);
                    preview.innerHTML = `<img src="${url}" alt="Xem trước" class="img-fluid" onerror="this.onerror=null; this.parentElement.innerHTML='<i class=\'fas fa-exclamation-triangle fa-3x text-warning\'></i><p class=\'text-muted mt-2\'>Không thể tải ảnh từ link này</p>'">`;
                } catch (e) {
                    preview.innerHTML = `
                        <i class="fas fa-exclamation-triangle fa-3x text-warning"></i>
                        <p class="text-muted mt-2">Link không hợp lệ</p>
                    `;
                }
            } else {
                // If no URL and no file, show placeholder
                if (!fileInput.files || !fileInput.files[0]) {
                    preview.innerHTML = `
                        <i class="fas fa-image fa-3x text-muted"></i>
                        <p class="text-muted mt-2">Chọn ảnh hoặc nhập link để xem trước</p>
                    `;
                }
            }
        }

        // Auto format price input
        document.querySelector('input[name="price"]').addEventListener('input', function() {
            let value = this.value.replace(/\D/g, '');
            this.value = value;
        });
    </script>
</body>
</html>