<%- include('../partials/header') %>

<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <h2 class="mb-4">
        <i class="fas fa-history"></i> Lịch sử đơn hàng
      </h2>
      
      <% if (orders && orders.length > 0) { %>
        <% orders.forEach(function(order) { %>
          <div class="card mb-3">
            <div class="card-body">
              <div class="row align-items-center">
                <div class="col-md-2">
                  <strong>Đơn hàng</strong><br>
                  <a href="/orders/<%= order._id %>" class="text-decoration-none">
                    #<%= order.orderNumber %>
                  </a>
                </div>
                
                <div class="col-md-1">
                  <strong>Ngày đặt</strong><br>
                  <%= new Date(order.createdAt).toLocaleDateString('vi-VN') %>
                </div>
                
                <div class="col-md-2">
                  <strong>Phương thức</strong><br>
                  <small>
                    <% if (order.paymentMethod === 'cash_on_delivery') { %>
                      <i class="fas fa-money-bill text-success"></i> COD
                    <% } else if (order.paymentMethod === 'bank_transfer') { %>
                      <i class="fas fa-university text-primary"></i> Chuyển khoản
                    <% } else if (order.paymentMethod === 'credit_card') { %>
                      <i class="fas fa-credit-card text-warning"></i> Thẻ
                    <% } else if (order.paymentMethod === 'coin') { %>
                      <i class="fas fa-coins text-warning"></i> Coin
                    <% } else { %>
                      <%= order.paymentMethod %>
                    <% } %>
                  </small>
                </div>
                
                <div class="col-md-2">
                  <strong>Trạng thái</strong><br>
                  <span class="badge <%= 
                    order.orderStatus === 'pending' ? 'bg-warning' :
                    order.orderStatus === 'processing' ? 'bg-info' :
                    order.orderStatus === 'shipped' ? 'bg-primary' :
                    order.orderStatus === 'delivered' ? 'bg-success' :
                    order.orderStatus === 'cancelled' ? 'bg-danger' : 'bg-secondary'
                  %>">
                    <%= 
                      order.orderStatus === 'pending' ? 'Chờ xử lý' :
                      order.orderStatus === 'processing' ? 'Đang xử lý' :
                      order.orderStatus === 'shipped' ? 'Đã gửi hàng' :
                      order.orderStatus === 'delivered' ? 'Đã giao hàng' :
                      order.orderStatus === 'cancelled' ? 'Đã hủy' : order.orderStatus
                    %>
                  </span>
                </div>
                
                <div class="col-md-2">
                  <strong>Thanh toán</strong><br>
                  <span class="badge <%= 
                    order.paymentStatus === 'pending' ? 'bg-warning' :
                    order.paymentStatus === 'paid' ? 'bg-success' :
                    order.paymentStatus === 'failed' ? 'bg-danger' : 'bg-secondary'
                  %>">
                    <%= 
                      order.paymentStatus === 'pending' ? 'Chờ thanh toán' :
                      order.paymentStatus === 'paid' ? 'Đã thanh toán' :
                      order.paymentStatus === 'failed' ? 'Thất bại' : order.paymentStatus
                    %>
                  </span>
                </div>
                
                <div class="col-md-1">
                  <strong>Tổng tiền</strong><br>
                  <span class="text-primary fs-6">
                    <strong><%= order.finalAmount.toLocaleString('vi-VN') %> đ</strong>
                  </span>
                </div>
                
                <div class="col-md-2 text-end">
                  <a href="/orders/<%= order._id %>" class="btn btn-outline-primary btn-sm">
                    <i class="fas fa-eye"></i> Xem chi tiết
                  </a>
                  <% if (order.orderStatus === 'pending') { %>
                    <button class="btn btn-outline-danger btn-sm mt-1" 
                            onclick="cancelOrder('<%= order._id %>')">
                      <i class="fas fa-times"></i> Hủy
                    </button>
                  <% } %>
                </div>
              </div>
              
              <!-- Hiển thị một số sách trong đơn hàng -->
              <div class="mt-3">
                <div class="row">
                  <% order.items.slice(0, 3).forEach(function(item) { %>
                    <div class="col-auto">
                      <img src="<%= item.book.coverImage %>" 
                           alt="<%= item.book.title %>" 
                           class="rounded"
                           style="width: 50px; height: 70px; object-fit: cover;"
                           title="<%= item.book.title %> (x<%= item.quantity %>)">
                    </div>
                  <% }); %>
                  <% if (order.items.length > 3) { %>
                    <div class="col-auto d-flex align-items-center">
                      <span class="text-muted">+<%= order.items.length - 3 %> sách khác</span>
                    </div>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
        
        <!-- Phân trang -->
        <% if (pagination && pagination.totalPages > 1) { %>
          <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
              <% if (pagination.hasPrev) { %>
                <li class="page-item">
                  <a class="page-link" href="/orders?page=<%= pagination.currentPage - 1 %>">
                    <i class="fas fa-chevron-left"></i> Trước
                  </a>
                </li>
              <% } %>
              
              <% for (let i = 1; i <= pagination.totalPages; i++) { %>
                <li class="page-item <%= pagination.currentPage === i ? 'active' : '' %>">
                  <a class="page-link" href="/orders?page=<%= i %>"><%= i %></a>
                </li>
              <% } %>
              
              <% if (pagination.hasNext) { %>
                <li class="page-item">
                  <a class="page-link" href="/orders?page=<%= pagination.currentPage + 1 %>">
                    Sau <i class="fas fa-chevron-right"></i>
                  </a>
                </li>
              <% } %>
            </ul>
          </nav>
        <% } %>
      <% } else { %>
        <!-- Không có đơn hàng -->
        <div class="text-center py-5">
          <i class="fas fa-receipt fa-5x text-muted mb-3"></i>
          <h4>Chưa có đơn hàng nào</h4>
          <p class="text-muted mb-4">Hãy mua sắm để tạo đơn hàng đầu tiên của bạn</p>
          <a href="/books" class="btn btn-primary">
            <i class="fas fa-shopping-cart"></i> Mua sắm ngay
          </a>
        </div>
      <% } %>
    </div>
  </div>
</div>

<script>
function cancelOrder(orderId) {
  if (confirm('Bạn có chắc muốn hủy đơn hàng này?')) {
    fetch(`/orders/${orderId}/cancel`, {
      method: 'POST'
    })
    .then(response => {
      if (response.ok) {
        location.reload();
      } else {
        alert('Không thể hủy đơn hàng. Vui lòng thử lại.');
      }
    })
    .catch(error => {
      console.error('Error:', error);
      alert('Có lỗi xảy ra khi hủy đơn hàng');
    });
  }
}
</script>

<%- include('../partials/footer') %>