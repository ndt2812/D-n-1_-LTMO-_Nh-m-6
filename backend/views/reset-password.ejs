<%- include('partials/header', { title: 'Đặt lại mật khẩu' }) %>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h1 class="card-title">Đặt lại mật khẩu</h1>
            </div>
            <div class="card-body">
                <% if (locals.error && error.length > 0) { %>
                    <div class="alert alert-danger"><%= error %></div>
                <% } %>
                <% if (locals.success_msg && success_msg.length > 0) { %>
                    <div class="alert alert-success"><%= success_msg %></div>
                <% } %>
                <% if (locals.info && info.length > 0) { %>
                    <div class="alert alert-info"><%= info %></div>
                <% } %>
                <div class="alert alert-success">
                    <strong>✅ Mã xác nhận hợp lệ!</strong><br>
                    Bây giờ bạn có thể đặt lại mật khẩu mới.
                </div>
                <p class="text-muted">Nhập mật khẩu mới của bạn:</p>
                <form action="/reset-password" method="POST">
                    <input type="hidden" name="email" value="<%= email || '' %>">
                    <div class="mb-3">
                        <label for="email_display" class="form-label">Email/Username</label>
                        <input type="text" class="form-control" id="email_display" value="<%= email || '' %>" disabled>
                        <small class="form-text text-muted">Email/Username đang được đặt lại mật khẩu</small>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Mật khẩu mới</label>
                        <input type="password" class="form-control" id="password" name="password" minlength="6" required>
                        <small class="form-text text-muted">Mật khẩu phải có ít nhất 6 ký tự</small>
                    </div>
                    <div class="mb-3">
                        <label for="confirmPassword" class="form-label">Xác nhận mật khẩu mới</label>
                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" minlength="6" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Đặt lại mật khẩu</button>
                    <a href="/forgot-password" class="btn btn-link">Quay lại</a>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>

