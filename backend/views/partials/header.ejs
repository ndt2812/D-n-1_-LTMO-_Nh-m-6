<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <i class="fas fa-book"></i> BookStore
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="/books">
                            <i class="fas fa-book"></i> Sách
                        </a>
                    </li>
                    <% if (typeof currentUser !== 'undefined' && currentUser) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/access/library">
                                <i class="fas fa-book-open"></i> Thư viện
                            </a>
                        </li>
                    <% } %>
                    <% if (typeof currentUser !== 'undefined' && currentUser && currentUser.role === 'admin') { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/books/new">
                                <i class="fas fa-plus"></i> Thêm sách
                            </a>
                        </li>
                    <% } %>
                </ul>
                
                <ul class="navbar-nav ms-auto">
                    <% if (typeof currentUser !== 'undefined' && currentUser) { %>
                        <!-- Admin Panel Link -->
                        <% if (currentUser.role === 'admin') { %>
                            <li class="nav-item">
                                <a class="nav-link text-warning" href="/admin">
                                    <i class="fas fa-cog"></i> Admin Panel
                                </a>
                            </li>
                        <% } %>
                        
                        <!-- Coin Balance -->
                        <li class="nav-item">
                            <a class="nav-link" href="/coins/wallet">
                                <i class="fas fa-coins text-warning"></i> 
                                <span class="badge bg-warning text-dark" id="coin-balance">
                                    <%= currentUser.coinBalance || 0 %>
                                </span>
                            </a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link position-relative" href="/cart">
                                <i class="fas fa-shopping-cart"></i> Giỏ hàng
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" id="cart-count" style="font-size: 0.7em;">
                                    <!-- Cart count sẽ được cập nhật bằng JavaScript -->
                                </span>
                            </a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link" href="/orders">
                                <i class="fas fa-receipt"></i> Đơn hàng
                            </a>
                        </li>
                        
                        <!-- Library -->
                        <li class="nav-item">
                            <a class="nav-link" href="/access/library">
                                <i class="fas fa-book"></i> Thư viện
                            </a>
                        </li>
                        
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="<%= currentUser.avatar ? currentUser.avatar : '/images/default-avatar.png' %>" alt="Avatar" width="30" height="30" class="rounded-circle">
                                <%= currentUser.username %>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="/profile">
                                    <i class="fas fa-user"></i> Hồ sơ
                                </a></li>
                                <li><a class="dropdown-item" href="/coins/wallet">
                                    <i class="fas fa-wallet"></i> Ví Coin
                                </a></li>
                                <li><a class="dropdown-item" href="/access/library">
                                    <i class="fas fa-book"></i> Thư viện sách
                                </a></li>
                                <% if (currentUser.role === 'admin') { %>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-warning" href="/admin">
                                        <i class="fas fa-cog"></i> Admin Panel
                                    </a></li>
                                <% } %>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/logout">
                                    <i class="fas fa-sign-out-alt"></i> Đăng xuất
                                </a></li>
                            </ul>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/login">
                                <i class="fas fa-sign-in-alt"></i> Đăng nhập
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/register">
                                <i class="fas fa-user-plus"></i> Đăng ký
                            </a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
