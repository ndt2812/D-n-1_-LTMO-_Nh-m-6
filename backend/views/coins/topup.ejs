<script>
document.addEventListener('DOMContentLoaded', function() {
    const amountInput = document.getElementById('amount');
    const coinPreview = document.getElementById('coinPreview');
    const previewAmount = document.getElementById('previewAmount');
    const previewCoins = document.getElementById('previewCoins');
    const previewBonus = document.getElementById('previewBonus');

    // Package selection buttons
    document.querySelectorAll('.select-package').forEach(button => {
        button.addEventListener('click', function() {
            const amount = this.dataset.amount;
            const coins = this.dataset.coins;
            
            amountInput.value = amount;
            updatePreview();
            
            // Scroll to form
            document.getElementById('topupForm').scrollIntoView({
                behavior: 'smooth'
            });
        });
    });

    // Real-time preview update
    amountInput.addEventListener('input', updatePreview);

    function updatePreview() {
        const amount = parseInt(amountInput.value) || 0;
        
        if (amount >= 50000) {
            const baseCoins = Math.floor(amount / 1000);
            let bonusCoins = 0;
            
            // Calculate bonus
            if (amount >= 2000000) bonusCoins = 400;
            else if (amount >= 1000000) bonusCoins = 150;
            else if (amount >= 500000) bonusCoins = 50;
            else if (amount >= 200000) bonusCoins = 10;
            
            const totalCoins = baseCoins + bonusCoins;
            
            previewAmount.textContent = amount.toLocaleString();
            previewCoins.textContent = totalCoins.toLocaleString();
            previewBonus.textContent = bonusCoins.toLocaleString();
            
            coinPreview.style.display = 'block';
        } else {
            coinPreview.style.display = 'none';
        }
    }

    // Form submission
    document.getElementById('topupForm').addEventListener('submit', function(e) {
        const amount = parseInt(amountInput.value);
        const paymentMethod = document.getElementById('paymentMethod').value;
        
        if (!amount || amount < 50000) {
            e.preventDefault();
            alert('S·ªë ti·ªÅn n·∫°p t·ªëi thi·ªÉu l√† 50,000 VNƒê');
            return;
        }
        
        if (!paymentMethod) {
            e.preventDefault();
            alert('Vui l√≤ng ch·ªçn ph∆∞∆°ng th·ª©c thanh to√°n');
            return;
        }
        
        // Show loading
        const submitBtn = this.querySelector('button[type="submit"]');
        submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> ƒêang x·ª≠ l√Ω...';
        submitBtn.disabled = true;
    });
});
</script>

