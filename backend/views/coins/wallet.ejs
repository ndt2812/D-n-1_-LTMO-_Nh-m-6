<%- include('../partials/header') %>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-3">
            <!-- Sidebar Navigation -->
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-coins"></i> Coin Wallet</h5>
                </div>
                <div class="list-group list-group-flush">
                    <a href="/coins/wallet" class="list-group-item list-group-item-action active">
                        <i class="fas fa-wallet"></i> Tổng quan
                    </a>
                    <a href="/coins/topup" class="list-group-item list-group-item-action">
                        <i class="fas fa-plus-circle"></i> Nạp Coin
                    </a>
                    <a href="/coins/history" class="list-group-item list-group-item-action">
                        <i class="fas fa-history"></i> Lịch sử
                    </a>
                    <a href="/access/library" class="list-group-item list-group-item-action">
                        <i class="fas fa-book"></i> Thư viện
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-9">
            <!-- Flash Messages -->
            <% if (messages && messages.error) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%= messages.error %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% } %>
            <% if (messages && messages.success) { %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <%= messages.success %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% } %>

            <!-- Wallet Overview -->
            <div class="card mb-4">
                <div class="card-header">
                    <h4><i class="fas fa-coins text-warning"></i> Ví Coin của tôi</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="text-center p-4 bg-gradient-warning rounded text-white">
                                <h2><i class="fas fa-coins"></i> <%= user.coinBalance.toLocaleString() %></h2>
                                <h5>Số dư hiện tại</h5>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-grid gap-2">
                                <a href="/coins/topup" class="btn btn-success btn-lg">
                                    <i class="fas fa-plus"></i> Nạp Coin
                                </a>
                                <a href="/access/library" class="btn btn-primary btn-lg">
                                    <i class="fas fa-book"></i> Thư viện sách
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Gói nạp phổ biến</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="card border-primary">
                                <div class="card-body text-center">
                                    <h6 class="card-title">Gói Cơ Bản</h6>
                                    <h4 class="text-primary">100 <i class="fas fa-coins text-warning"></i></h4>
                                    <p class="card-text">100,000 VNĐ</p>
                                    <a href="/coins/topup" class="btn btn-outline-primary">Nạp ngay</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card border-success">
                                <div class="card-body text-center">
                                    <h6 class="card-title">Gói Phổ Biến</h6>
                                    <h4 class="text-success">500 <i class="fas fa-coins text-warning"></i></h4>
                                    <p class="card-text">500,000 VNĐ</p>
                                    <span class="badge bg-success">+50 Bonus</span>
                                    <br><br>
                                    <a href="/coins/topup" class="btn btn-outline-success">Nạp ngay</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card border-warning">
                                <div class="card-body text-center">
                                    <h6 class="card-title">Gói VIP</h6>
                                    <h4 class="text-warning">1000 <i class="fas fa-coins text-warning"></i></h4>
                                    <p class="card-text">1,000,000 VNĐ</p>
                                    <span class="badge bg-warning">+150 Bonus</span>
                                    <br><br>
                                    <a href="/coins/topup" class="btn btn-warning">Nạp ngay</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Transactions -->
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5>Giao dịch gần đây</h5>
                    <a href="/coins/history" class="btn btn-outline-secondary btn-sm">Xem tất cả</a>
                </div>
                <div class="card-body">
                    <% if (recentTransactions && recentTransactions.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Thời gian</th>
                                        <th>Loại</th>
                                        <th>Mô tả</th>
                                        <th>Số coin</th>
                                        <th>Số dư</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% recentTransactions.forEach(transaction => { %>
                                        <tr>
                                            <td><%= transaction.createdAt.toLocaleDateString('vi-VN') %></td>
                                            <td>
                                                <% if (transaction.type === 'deposit') { %>
                                                    <span class="badge bg-success">Nạp tiền</span>
                                                <% } else if (transaction.type === 'purchase') { %>
                                                    <span class="badge bg-primary">Mua sách</span>
                                                <% } else if (transaction.type === 'bonus') { %>
                                                    <span class="badge bg-warning">Bonus</span>
                                                <% } else { %>
                                                    <span class="badge bg-info"><%= transaction.type %></span>
                                                <% } %>
                                            </td>
                                            <td><%= transaction.description %></td>
                                            <td>
                                                <% if (transaction.type === 'deposit' || transaction.type === 'bonus') { %>
                                                    <span class="text-success">+<%= transaction.amount %> <i class="fas fa-coins text-warning"></i></span>
                                                <% } else { %>
                                                    <span class="text-danger">-<%= transaction.amount %> <i class="fas fa-coins text-warning"></i></span>
                                                <% } %>
                                            </td>
                                            <td><%= transaction.balanceAfter %> <i class="fas fa-coins text-warning"></i></td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-history fa-3x"></i>
                            <p class="mt-2">Chưa có giao dịch nào</p>
                            <a href="/coins/topup" class="btn btn-primary">Nạp Coin đầu tiên</a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.bg-gradient-warning {
    background: linear-gradient(45deg, #ffc107, #ff9800);
}

.card {
    box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    border: 1px solid rgba(0, 0, 0, 0.125);
}

.card:hover {
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    transition: box-shadow 0.15s ease-in-out;
}

.text-warning {
    color: #ffc107 !important;
}

.fas.fa-coins {
    color: #ffc107;
}
</style>

<%- include('../partials/footer') %>