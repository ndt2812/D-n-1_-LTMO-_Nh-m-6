<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="18dp"
    app:cardElevation="2dp"
    app:strokeColor="#F0F0F5"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="120dp"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imgBookCover"
            android:layout_width="72dp"
            android:layout_height="108dp"
            android:background="#E5E7F2"
            android:scaleType="centerCrop"
            android:contentDescription="@string/app_name" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Title"
                android:textColor="@color/colorOnBackground"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/tvAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Author"
                android:textColor="#9CA3C1"
                android:textSize="13sp"
                android:fontFamily="sans-serif" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_quantity_group"
                        android:gravity="center_vertical"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp">

                        <TextView
                            android:id="@+id/btnDecrease"
                            android:layout_width="36dp"
                            android:layout_height="32dp"
                            android:background="@drawable/bg_quantity_button"
                            android:gravity="center"
                            android:text="-"
                            android:textColor="#4C4F61"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvQuantity"
                            android:layout_width="44dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="@color/colorOnBackground"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/btnIncrease"
                            android:layout_width="36dp"
                            android:layout_height="32dp"
                            android:background="@drawable/bg_quantity_button"
                            android:gravity="center"
                            android:text="+"
                            android:textColor="#4C4F61"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/btnRemove"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_icon_button"
                        android:contentDescription="@string/cd_remove_item"
                        android:padding="8dp"
                        android:src="@drawable/ic_trash"
                        android:tint="#8F96B6" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Giá: 0 đ"
                    android:textColor="#9CA3C1"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:typeface="normal"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:ellipsize="none" />

                <TextView
                    android:id="@+id/tvSubtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="start"
                    android:text="Tổng: 0 đ"
                    android:textColor="@color/colorOnBackground"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:typeface="normal"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:ellipsize="none"
                    android:includeFontPadding="false" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
