<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="Đổi mật khẩu"
            app:titleTextColor="#FFFFFF" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp">

            <!-- Step 1: Send Code -->
            <LinearLayout
                android:id="@+id/stepSendCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_book_logo"
                    android:tint="@color/colorPrimary"
                    android:layout_marginTop="48dp"
                    android:layout_marginBottom="24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gửi mã xác nhận"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#2C2C2C"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chúng tôi sẽ gửi mã xác nhận 6 chữ số đến email của bạn để đổi mật khẩu."
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:gravity="center"
                    android:layout_marginBottom="32dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

                <Button
                    android:id="@+id/btnSendCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gửi mã xác nhận"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_button_primary" />

            </LinearLayout>

            <!-- Step 2: Verify Code -->
            <LinearLayout
                android:id="@+id/stepVerifyCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_book_logo"
                    android:tint="@color/colorPrimary"
                    android:layout_marginTop="48dp"
                    android:layout_marginBottom="24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xác nhận mã"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#2C2C2C"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mã xác nhận đã được gửi đến email của bạn. Vui lòng kiểm tra hộp thư đến."
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:gravity="center"
                    android:layout_marginBottom="24dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_input_rounded"
                    android:gravity="center"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginBottom="24dp">

                    <EditText
                        android:id="@+id/edtCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nhập 6 chữ số"
                        android:background="@android:color/transparent"
                        android:inputType="number"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:letterSpacing="0.1"
                        android:maxLength="6"
                        android:padding="16dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnVerify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Xác nhận mã"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_button_primary" />

                <TextView
                    android:id="@+id/tvResendCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gửi lại mã"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="8dp" />

            </LinearLayout>

            <!-- Step 3: Reset Password -->
            <LinearLayout
                android:id="@+id/stepResetPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_book_logo"
                    android:tint="@color/colorPrimary"
                    android:layout_marginTop="48dp"
                    android:layout_marginBottom="24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đặt lại mật khẩu"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#2C2C2C"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mã xác nhận hợp lệ! Bây giờ bạn có thể đặt lại mật khẩu mới."
                    android:textSize="14sp"
                    android:textColor="#4CAF50"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:padding="12dp"
                    android:background="#E8F5E9" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_input_rounded"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="12dp"
                    android:layout_marginBottom="16dp">

                    <EditText
                        android:id="@+id/edtPassword"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Mật khẩu mới"
                        android:background="@android:color/transparent"
                        android:inputType="textPassword"
                        android:padding="0dp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_eye" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_input_rounded"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="12dp"
                    android:layout_marginBottom="32dp">

                    <EditText
                        android:id="@+id/edtConfirmPassword"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Xác nhận mật khẩu mới"
                        android:background="@android:color/transparent"
                        android:inputType="textPassword"
                        android:padding="0dp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_eye" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnReset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đổi mật khẩu"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_button_primary" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#F44336"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

