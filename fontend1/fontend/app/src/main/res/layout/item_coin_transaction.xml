<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="12dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="false"
    app:strokeColor="#E0E0E0"
    app:strokeWidth="1dp"
    app:cardBackgroundColor="#E5E5E5"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Row: Icon, Title/Description, Amount -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="top">

            <!-- Coin Icon -->
            <FrameLayout
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/ic_coin_background">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="$"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="sans-serif-medium" />
            </FrameLayout>

            <!-- Title and Description -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:minHeight="32dp">

                <TextView
                    android:id="@+id/tvTransactionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nạp coin"
                    android:textColor="#1F1F1F"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tvTransactionDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Mô tả giao dịch"
                    android:textColor="#757575"
                    android:textSize="13sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>

            <!-- Amount (Right aligned, top) -->
            <TextView
                android:id="@+id/tvTransactionAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="+500 coin"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="top|end" />
        </LinearLayout>

        <!-- Bottom Row: Date and Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvTransactionDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="12/04/2024 10:30"
                android:textColor="#757575"
                android:textSize="13sp"
                android:maxLines="1" />

            <TextView
                android:id="@+id/tvTransactionStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoàn tất"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="#E4DFFF"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:minHeight="28dp"
                android:gravity="center"
                android:layout_marginStart="8dp" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
